    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/metismenu/metisMenu.min.js"></script>
    <script src="https://unpkg.com/simplebar@5.3.9/dist/simplebar.min.js"></script>
    <script src="https://unpkg.com/node-waves@latest/dist/waves.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/feedbackPopup.js"></script> 
    <script>
        $(document).ready(function () {
            console.log('Document ready, initializing scripts.');

            if (typeof jQuery === 'undefined') {
                console.error('jQuery is not loaded. Check ~/lib/jquery/jquery.min.js.');
                alert('jQuery could not be loaded. Please ensure the file exists in ~/lib/jquery/.');
                return;
            }

            // Hàm làm nổi bật nút điều hướng dựa trên URL
            function highlightActiveMenu() {
                const currentPath = window.location.pathname.toLowerCase();
                const menuLinks = $('#side-menu a');

                menuLinks.each(function () {
                    const linkPath = $(this).attr('href')?.toLowerCase();
                    if (linkPath && currentPath === linkPath) {
                        $(this).addClass('nav-active');
                    } else {
                        $(this).removeClass('nav-active');
                    }
                });

                const submenuLinks = $('.sub-menu.standout-submenu a');
                submenuLinks.each(function () {
                    const submenuPath = $(this).attr('href')?.toLowerCase();
                    if (submenuPath && currentPath === submenuPath) {
                        $(this).addClass('nav-active');
                        $(this).closest('.sub-menu').prev('a').addClass('mm-active');
                        $(this).closest('.sub-menu').addClass('mm-show');
                    }
                });
            }

            // Tải dữ liệu user
            function loadUserData() {
                $.ajax({
                    url: "/Reports/Personal",
                    type: "GET",
                    success: function (data) {
                        if (data && data.EmployeeName) {
                            $("#txtAmountNoticeNotRead").text(data.NoticeNotRead || 0);
                            let avatarUrl = data.EmployeeAvatar || "~/images/avatar/default-avatar.jpg";
                            if (avatarUrl && !avatarUrl.startsWith('http') && avatarUrl.startsWith('~/')) {
                                avatarUrl = avatarUrl.replace('~/', '/');
                            } else if (avatarUrl && !avatarUrl.startsWith('http') && !avatarUrl.startsWith('/')) {
                                avatarUrl = `/images/avatar/${avatarUrl}`;
                            }
                            $("#imgEmployeeAvatar").attr("src", avatarUrl);
                            $("#txtEmployeeName").text(data.EmployeeName || "User");
                            window.userKey = data.UserKey;
                            initializeSignalR(window.userKey);
                        } else {
                            console.warn("No user data returned from /Reports/Personal");
                            $("#txtEmployeeName").text("User");
                            $("#imgEmployeeAvatar").attr("src", "/images/avatar/default-avatar.jpg");
                        }
                    },
                    error: function (xhr) {
                        console.error("Error fetching user data:", xhr.status, xhr.responseText);
                        $("#txtEmployeeName").text("User");
                        $("#imgEmployeeAvatar").attr("src", "/images/avatar/default-avatar.jpg");
                    }
                });
            }

            // Tải số lượng thông báo chưa đọc khi load trang
            function loadUnreadCount() {
                $.ajax({
                    url: "/NotificationHandler/GetUnreadCount",
                    type: "GET",
                    success: function (data) {
                        $("#txtAmountNoticeNotRead").text(data.count || 0);
                        if (data.count > 0) {
                            shakeBell();
                        }
                    },
                    error: function (xhr) {
                        console.error("Error fetching unread count:", xhr.status, xhr.responseText);
                    }
                });
            }

            // Hàm tính thời gian tương đối (ví dụ: "5 phút trước")
            function getTimeAgo(createdOn) {
                const now = new Date();
                const createdDate = new Date(createdOn);
                const diffInMinutes = Math.floor((now - createdDate) / (1000 * 60)); // Chênh lệch tính bằng phút

                if (diffInMinutes < 1) return "Vừa xong";
                if (diffInMinutes < 60) return `${diffInMinutes} phút trước`;
                const diffInHours = Math.floor(diffInMinutes / 60);
                if (diffInHours < 24) return `${diffInHours} giờ trước`;
                const diffInDays = Math.floor(diffInHours / 24);
                return `${diffInDays} ngày trước`;
            }

            // Tải danh sách thông báo (30 bản ghi gần nhất) và đánh dấu đã đọc
            let skip = 0;
            const take = 30;
            function loadNotifications() {
                $.ajax({
                    url: `/NotificationHandler/GetNotifications?skip=${skip}&take=${take}`,
                    type: "GET",
                    success: function (data) {
                        console.log("Notifications data:", data);
                        const $list = $("#notification-list");
                        $list.empty();
                        if (data.notifications && data.notifications.length > 0) {
                            data.notifications.forEach(function (notification) {
                                // Phân biệt icon và hành động click dựa trên Type
                                const iconClass = notification.Type === "Feedback" ? "uil-feedback" : "uil-comment-alt-message";
                                const clickAction = notification.Type === "Feedback" ? 'data-bs-toggle="modal" data-bs-target="#feedbackModal"' : '';
                                $list.append(`
                                                            <a href="#" class="dropdown-item text-dark notification-item d-flex align-items-start p-2" data-notification-id="${notification.NotificationKey}" ${clickAction}>
                                                                <div class="flex-shrink-0 me-3">
                                                                    <span class="avatar-title bg-primary rounded-circle font-size-16">
                                                                        <i class="${iconClass}"></i>
                                                                    </span>
                                                                </div>
                                                                <div class="flex-grow-1">
                                                                    <h6 class="mt-0 mb-1">${notification.Content}</h6>
                                                                    <p class="mb-0 text-muted">${getTimeAgo(notification.CreatedOn)}</p>
                                                                </div>
                                                            </a>
                                                        `);
                            });
                            if (data.totalCount > skip + take) {
                                $("#view-more").show();
                            } else {
                                $("#view-more").hide();
                            }
                            // Đánh dấu tất cả thông báo là đã đọc
                            const notificationIds = data.notifications.map(n => n.NotificationKey);
                            if (notificationIds.length > 0) {
                                $.ajax({
                                    url: "/NotificationHandler/MarkAsRead",
                                    type: "POST",
                                    contentType: "application/json",
                                    data: JSON.stringify(notificationIds),
                                    success: function () {
                                        loadUnreadCount();
                                    },
                                    error: function (xhr) {
                                        console.error("Error marking as read:", xhr.status, xhr.responseText);
                                    }
                                });
                            }
                        } else {
                            $list.append(`
                                                        <div class="text-center p-3">
                                                            <p class="text-muted">Không có thông báo.</p>
                                                        </div>
                                                    `);
                            $("#view-more").hide();
                        }
                    },
                    error: function (xhr) {
                        console.error("Error fetching notifications:", xhr.status, xhr.responseText);
                        $("#notification-list").html(`
                                                    <div class="text-center p-3">
                                                        <p class="text-muted">Lỗi khi tải thông báo.</p>
                                                    </div>
                                                `);
                        $("#view-more").hide();
                    }
                });
            }

            // Tải thêm thông báo khi click View More
            $("#view-more").on("click", function (e) {
                e.preventDefault(); // Ngăn hành vi mặc định của thẻ <a>
                e.stopPropagation(); // Ngăn sự kiện lan truyền lên dropdown
                skip += take;
                loadNotifications();
            });

            // Hiệu ứng lắc chuông
            function shakeBell() {
                const $bell = $("#page-header-notifications-dropdown");
                if (!$bell.hasClass("animate__shakeX")) {
                    $bell.addClass("animate__shakeX");
                    setTimeout(() => $bell.removeClass("animate__shakeX"), 500);
                }
            }

            // Kết nối SignalR
            function initializeSignalR(userKey) {
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/notificationHub", { accessTokenFactory: () => userKey || "" })
                    .build();

                connection.on("ReceiveNotification", function (content) {
                    console.log("New notification received:", content);
                    loadUnreadCount();
                    if (parseInt($("#txtAmountNoticeNotRead").text()) > 0) {
                        shakeBell();
                    }
                });

                connection.start()
                    .then(() => console.log("SignalR connected"))
                    .catch(err => console.error("SignalR connection error:", err));
            }

            // Xử lý click chuông
            $("#page-header-notifications-dropdown").on("click", function () {
                skip = 0; // Reset skip khi mở popup
                loadNotifications();
            });

            // Khởi tạo các thành phần
            loadUserData();
            highlightActiveMenu();
            loadUnreadCount();

            // Khởi tạo dropdown Bootstrap
            var dropdownElementList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'));
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                try {
                    return new bootstrap.Dropdown(dropdownToggleEl);
                } catch (e) {
                    console.error("Error initializing dropdown:", e);
                    return null;
                }
            });

            // Khởi tạo MetisMenu cho submenu
            if ($.fn.metisMenu) {
                try {
                    $('#side-menu').metisMenu();
                    console.log('MetisMenu initialized successfully for sidebar menu.');
                } catch (e) {
                    console.error('Error initializing MetisMenu:', e);
                }
            } else {
                console.error('MetisMenu not available. Check ~/lib/metismenu/metisMenu.min.js.');
            }

            // Khởi tạo DataTables
            if ($.fn.DataTable) {
                try {
                    $('table.dataTable').DataTable({});
                    console.log('DataTables initialized successfully.');
                } catch (e) {
                    console.error('Error initializing DataTables:', e);
                }
            }

            // Khởi tạo SimpleBar
            if (typeof SimpleBar !== 'undefined') {
                try {
                    $('.sidebar-menu-scroll').each(function () {
                        new SimpleBar(this);
                    });
                    console.log('SimpleBar initialized successfully.');
                } catch (e) {
                    console.error('Error initializing SimpleBar:', e);
                }
            } else {
                console.error('SimpleBar not available. Check SimpleBar CDN.');
            }

            // Khởi tạo Waves
            if (typeof Waves !== 'undefined') {
                Waves.init();
                console.log('Waves initialized successfully.');
            }

            // Khởi tạo trạng thái sidebar
            function initSidebarState() {
                const windowWidth = $(window).width();
                const $verticalMenu = $('.vertical-menu');
                const $overlay = $('.sidebar-overlay');

                if (windowWidth <= 576) {
                    $verticalMenu.removeClass('active');
                    $overlay.removeClass('active').hide();
                    console.log('Mobile Init: Sidebar hidden, overlay hidden.');
                    console.log('CSS Check - .vertical-menu:', $verticalMenu.css('left'), $verticalMenu.css('opacity'));
                } else if (windowWidth <= 768) {
                    $verticalMenu.removeClass('active');
                    $overlay.removeClass('active').hide();
                    console.log('Tablet Init: Sidebar collapsed, overlay hidden.');
                } else {
                    $verticalMenu.removeClass('active');
                    $overlay.removeClass('active').hide();
                    console.log('Desktop Init: Sidebar visible, overlay hidden.');
                }
            }

            initSidebarState();
            $(window).on('resize', initSidebarState);

            // Toggle sidebar trên mobile
            $('.btn-toggle-sidebar').on('click', function (e) {
                e.preventDefault();
                if ($(window).width() <= 576) {
                    console.log('Hamburger clicked (Mobile)!');
                    const $verticalMenu = $('.vertical-menu');
                    const $overlay = $('.sidebar-overlay');

                    $verticalMenu.toggleClass('active');

                    if ($verticalMenu.hasClass('active')) {
                        $overlay.addClass('active').fadeIn(200);
                        console.log('Sidebar opened (active class added), overlay shown.');
                        console.log('CSS Check - .vertical-menu.active:', $verticalMenu.css('left'), $verticalMenu.css('opacity'));
                    } else {
                        $overlay.removeClass('active').fadeOut(200);
                        console.log('Sidebar closed (active class removed), overlay hidden.');
                        console.log('CSS Check - .vertical-menu:', $verticalMenu.css('left'), $verticalMenu.css('opacity'));
                    }
                } else {
                    console.log('Hamburger clicked (ignored on non-mobile).');
                }
            });

            // Đóng sidebar khi click overlay
            $('.sidebar-overlay').on('click', function () {
                if ($('.vertical-menu').hasClass('active')) {
                    console.log('Overlay clicked, closing sidebar.');
                    const $verticalMenu = $('.vertical-menu');
                    const $overlay = $('.sidebar-overlay');
                    $verticalMenu.removeClass('active');
                    $overlay.removeClass('active').fadeOut(200);
                    console.log('CSS Check - .vertical-menu:', $verticalMenu.css('left'), $verticalMenu.css('opacity'));
                }
            });

            // Đóng sidebar khi click ngoài trên mobile
            $(document).on('click', function (e) {
                const $verticalMenu = $('.vertical-menu');
                if ($(window).width() <= 576 && $verticalMenu.hasClass('active')) {
                    if (!$(e.target).closest('.vertical-menu').length && !$(e.target).closest('.btn-toggle-sidebar').length) {
                        console.log('Clicked outside sidebar on mobile, closing.');
                        $verticalMenu.removeClass('active');
                        $('.sidebar-overlay').removeClass('active').fadeOut(200);
                        console.log('CSS Check - .vertical-menu:', $verticalMenu.css('left'), $verticalMenu.css('opacity'));
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
