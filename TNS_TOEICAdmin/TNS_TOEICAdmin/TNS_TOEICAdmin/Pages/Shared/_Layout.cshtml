        @@media (min-width: 577px) and (max-width: 768px) {
            /* Tablet */
            #layout-wrapper .vertical-menu {
                width: 60px !important;
                left: 0 !important;
                opacity: 1 !important;
            }

            .vertical-menu .navbar-brand-box,
            #side-menu a span {
                display: none !important;
