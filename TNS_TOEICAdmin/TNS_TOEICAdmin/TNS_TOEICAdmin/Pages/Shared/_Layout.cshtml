    <script>
        $(document).ready(function () {
            function debounce(func, wait) {
                let timeout;
                return function (...args) {
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(this, args), wait);
                };
            }

            function highlightActiveMenu() {
                const currentPath = window.location.pathname.toLowerCase();
                $('#side-menu a').each(function () {
                    const linkPath = $(this).attr('href')?.toLowerCase();
                    if (linkPath && currentPath.includes(linkPath) && linkPath !== '/') {
                        $(this).addClass('nav-active');
                        $(this).closest('.sub-menu').addClass('mm-show');
                        $(this).closest('.sub-menu').prev('a').addClass('mm-active');
                    }
                });
            }

            function loadUserData() {
                $.ajax({
                    url: "/Reports/Personal",
                    type: "GET",
                    success: function (data) {
                        if (data && data.EmployeeName) {
                            $("#txtAmountNoticeNotRead").text(data.NoticeNotRead || 0);
                            let avatarUrl = data.EmployeeAvatar || "/images/avatar/default-avatar.jpg";
                            if (avatarUrl.startsWith('~/')) {
                                avatarUrl = avatarUrl.replace('~/', '/');
                            }
                            $("#imgEmployeeAvatar").attr("src", avatarUrl);
                            $("#txtEmployeeName").text(data.EmployeeName || "User");
                            window.userKey = data.UserKey;
                            initializeSignalR(window.userKey);
                        }
                    },
                    error: function () {
                        $("#txtEmployeeName").text("User");
                    }
                });
            }

            function loadUnreadCount() {
                $.ajax({
                    url: "/api/NotificationHandler/GetUnreadCount",
                    type: "GET",
                    success: function (data) {
                        $("#txtAmountNoticeNotRead").text(data.count || 0);
                        if (data.count > 0) {
                            shakeBell();
                        }
                    }
                });
            }

            function shakeBell() {
                const $bell = $("#page-header-notifications-dropdown");
                if (!$bell.hasClass("animate__shakeX")) {
                    $bell.addClass("animate__shakeX");
                    setTimeout(() => $bell.removeClass("animate__shakeX"), 500);
                }
            }

            function getTimeAgo(createdOn) {
                const now = new Date();
                const createdDate = new Date(createdOn);
                const diff = Math.floor((now - createdDate) / 60000);
                if (diff < 1) return "Just now";
                if (diff < 60) return `${diff}m ago`;
                const hours = Math.floor(diff / 60);
                if (hours < 24) return `${hours}h ago`;
                return `${Math.floor(hours / 24)}d ago`;
            }

            let skip = 0;
            const take = 30;
            function loadNotifications() {
                $.ajax({
                    url: `/api/NotificationHandler/GetNotifications?skip=${skip}&take=${take}`,
                    type: "GET",
                    success: function (data) {
                        const $list = $("#notification-list");
                        $list.empty();
                        if (data.notifications && data.notifications.length > 0) {
                            data.notifications.forEach(function (notification) {
                                const iconClass = notification.Type === "Feedback" ? "uil-feedback" : "uil-comment-alt-message";
                                const clickAction = notification.Type === "Feedback" ? 'data-bs-toggle="modal" data-bs-target="#feedbackModal"' : '';
                                $list.append(`
                                    <a href="#" class="dropdown-item notification-item d-flex align-items-start" data-notification-id="${notification.NotificationKey}" ${clickAction}>
                                        <div class="flex-shrink-0 me-3">
                                            <div class="avatar-title">
                                                <i class="${iconClass}"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6>${notification.Content}</h6>
                                            <p>${getTimeAgo(notification.CreatedOn)}</p>
                                        </div>
                                    </a>
                                `);
                            });

                            const notificationIds = data.notifications.map(n => n.NotificationKey);
                            if (notificationIds.length > 0) {
                                $.ajax({
                                    url: "/api/NotificationHandler/MarkAsRead",
                                    type: "POST",
                                    contentType: "application/json",
                                    data: JSON.stringify(notificationIds),
                                    success: function () {
                                        loadUnreadCount();
                                    }
                                });
                            }
                        } else {
                            $list.html(`
                                <div class="text-center p-4">
                                    <i class="uil-bell-slash font-size-24 text-muted mb-2"></i>
                                    <p class="text-muted mb-0">No notifications</p>
                                </div>
                            `);
                        }
                    }
                });
            }

            function initializeSignalR(userKey) {
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/notificationHub", { accessTokenFactory: () => userKey || "" })
                    .build();

                const debouncedLoadUnreadCount = debounce(loadUnreadCount, 2000);

                connection.on("ReceiveNotification", function () {
                    debouncedLoadUnreadCount();
                    if (parseInt($("#txtAmountNoticeNotRead").text()) > 0) {
                        shakeBell();
                    }
                });

                connection.start()
                    .then(() => console.log("SignalR connected"))
                    .catch(err => console.error("SignalR error:", err));
            }

            $("#page-header-notifications-dropdown").on("click", function () {
                skip = 0;
                loadNotifications();
            });

            $('.btn-toggle-sidebar').on('click', function () {
                $('.vertical-menu').toggleClass('active');
                $('.sidebar-overlay').toggleClass('active');
            });

            $('.sidebar-overlay').on('click', function () {
                $('.vertical-menu').removeClass('active');
                $(this).removeClass('active');
            });

            if ($.fn.metisMenu) {
                $('#side-menu').metisMenu();
            }

            loadUserData();
            highlightActiveMenu();
            loadUnreadCount();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>