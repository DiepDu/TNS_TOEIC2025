@page 
@model TNS_TOEICAdmin.Pages.Manage.MembersModel
@{
    ViewData["Title"] = "Member Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-user-graduate me-2"></i>Member Management</h2>
        <div class="search-container">
            <button class="btn btn-add"><i class="fas fa-plus me-2"></i>Add Member</button>
            <input type="text" class="form-control search-input" id="searchInput" placeholder="Search by MemberID or MemberName" />
            <select class="form-control" id="activateFilter">
                <option value="">All Statuses</option>
                <option value="1">Activated</option>
                <option value="0">Locked</option>
            </select>
            <select class="form-control" id="testStatusFilter">
                <option value="">All Test Statuses</option>
                <option value="inprogress">In Progress</option>
                <option value="completed">Completed</option>
                <option value="notstarted">Not Started</option>
            </select>
            <button class="btn btn-search" onclick="searchMembers()"><i class="fas fa-search me-2"></i>Search</button>
        </div>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>MemberID</th>
                    <th>Member Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Department</th>
                    <th>StudyScore</th>
                    <th>ExamScore</th>
                    <th>TotalTests</th>
                    <th>Average Score</th>
                    <th>Status</th>
                    <th>LastLogin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="memberTableBody"></tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center" id="pagination"></ul>
        </nav>
    </div>

    <!-- Add/Edit Modal -->
    <div class="modal fade" id="memberModal" tabindex="-1" aria-labelledby="memberModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="memberModalLabel">Add Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="memberForm">
                        <input type="hidden" id="memberKey" name="memberKey" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="memberID" class="form-label">MemberID</label>
                                <input type="text" class="form-control" id="memberID" name="memberID" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="memberName" class="form-label">Member Name</label>
                                <input type="text" class="form-control" id="memberName" name="memberName" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter only when creating or resetting" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="gender" class="form-label">Gender</label>
                                <select class="form-control" id="gender" name="gender">
                                    <option value="1">Male</option>
                                    <option value="0">Female</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="yearOld" class="form-label">Age</label>
                                <input type="number" class="form-control" id="yearOld" name="yearOld" min="1" max="100" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="departmentKey" class="form-label">Department</label>
                                <select class="form-control" id="departmentKey" name="departmentKey">
                                    <option value="">Not Linked</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="toeicScoreStudy" class="form-label">Study Score</label>
                                <input type="number" class="form-control" id="toeicScoreStudy" name="toeicScoreStudy" min="0" max="990" placeholder="0-990" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="toeicScoreExam" class="form-label">Exam Score</label>
                                <input type="number" class="form-control" id="toeicScoreExam" name="toeicScoreExam" min="0" max="990" placeholder="0-990" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="activate" class="form-label">Status</label>
                                <select class="form-control" id="activate" name="activate">
                                    <option value="1">Activated</option>
                                    <option value="0">Locked</option>
                                </select>
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-save"><i class="fas fa-save me-2"></i>Save</button>
                            <button type="button" class="btn btn-cancel" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i>Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this member?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-delete" onclick="confirmDelete()">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Modal -->
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel">Test Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="charts-row">
                        <div class="chart-container">
                            <canvas id="listeningScoreChart"></canvas>
                        </div>
                        <div class="chart-container">
                            <canvas id="readingScoreChart"></canvas>
                        </div>
                        <div class="chart-container">
                            <canvas id="testScoreChart"></canvas>
                        </div>
                    </div>
                    <hr />
                    <h6>Test List</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Test ID</th>
                                    <th>Score</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="testDetailsBody"></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Test Modal -->
    <div class="modal fade" id="editTestModal" tabindex="-1" aria-labelledby="editTestModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editTestModalLabel">Edit Test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editTestForm">
                        <input type="hidden" id="editResultKey" name="editResultKey" />
                        <div class="mb-3">
                            <label for="editTestScore" class="form-label">Test Score</label>
                            <input type="number" class="form-control" id="editTestScore" name="editTestScore" min="0" max="990" required />
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-save"><i class="fas fa-save me-2"></i>Save Score</button>
                            <button type="button" class="btn btn-danger" onclick="cancelTest()"><i class="fas fa-ban me-2"></i>Cancel Test</button>
                            <button type="button" class="btn btn-cancel" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i>Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script>
            let totalItems = 0;
            let members = [];
            let currentMemberKey = null;
            let currentPage = 1;
            const pageSize = 10;
            let searchTerm = '';
            let activateFilter = '';
            let testStatusFilter = '';
            let isEditMode = false;

            $(document).ready(function () {
                loadMembers();
                $('.btn-add').on('click', showAddModal);
            });

            function loadMembers(page = 1, search = '', activate = '', testStatus = '') {
                currentPage = page;
                searchTerm = search;
                activateFilter = activate;
                testStatusFilter = testStatus;

                let data = { page: currentPage, pageSize: pageSize };
                if (search.trim() !== '') data.search = search;
                if (activate !== '') data.activate = activate;
                if (testStatus !== '') data.testStatus = testStatus;

                $.ajax({
                    url: '/Manage/Members?handler=GetMembers',
                    method: 'GET',
                    data: data,
                    dataType: 'json',
                    success: function (data) {
                        if (data.status === 'ERROR') {
                            showAlert('danger', data.message || 'Error loading member list.');
                            members = [];
                            totalItems = 0;
                        } else {
                            members = Array.isArray(data.members) ? data.members : [];
                            totalItems = data.totalItems || 0;
                        }
                        renderMembers();
                        renderPagination();
                    },
                    error: function () {
                        showAlert('danger', 'Failed to load member list.');
                        members = [];
                        totalItems = 0;
                        renderMembers();
                        renderPagination();
                    }
                });
            }

            function renderMembers() {
                const tbody = $('#memberTableBody');
                tbody.empty();
                members.forEach(m => {
                    tbody.append(`
                                <tr>
                                    <td>${m.MemberID || 'N/A'}</td>
                                    <td>${m.MemberName || 'N/A'}</td>
                                    <td>${m.Gender === 1 ? 'Male' : 'Female'}</td>
                                    <td>${m.YearOld || 'N/A'}</td>
                                    <td>${m.DepartmentName || 'Not Linked'}</td>
                                    <td>${m.ToeicScoreStudy !== null ? m.ToeicScoreStudy : 'None'}</td>
                                    <td>${m.ToeicScoreExam !== null ? m.ToeicScoreExam : 'None'}</td>
                                    <td>${m.TotalTests || 0}</td>
                                    <td>${m.AverageTestScore ? m.AverageTestScore.toFixed(2) : 'N/A'}</td>
                                    <td>${m.Activate ? 'Activated' : 'Locked'}</td>
                                    <td>${m.LastLoginDate || 'Never Logged In'}</td>
                                    <td>
                                        <button class="btn btn-action btn-edit" onclick="showEditModal('${m.MemberKey}')"><i class="fas fa-edit"></i></button>
                                        <button class="btn btn-action btn-details" onclick="showDetailsModal('${m.MemberKey}')"><i class="fas fa-info-circle"></i></button>
                                        <button class="btn btn-action btn-delete" onclick="showDeleteModal('${m.MemberKey}')"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            `);
                });
            }

            function renderPagination() {
                const totalPages = Math.ceil(totalItems / pageSize);
                const pagination = $('#pagination');
                pagination.empty();

                pagination.append(`<li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="loadMembers(${currentPage - 1}, '${searchTerm}', '${activateFilter}', '${testStatusFilter}')"><i class="fas fa-chevron-left"></i></a>
                </li>`);

                for (let i = 1; i <= totalPages; i++) {
                    pagination.append(`<li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="loadMembers(${i}, '${searchTerm}', '${activateFilter}', '${testStatusFilter}')">${i}</a>
                    </li>`);
                }

                pagination.append(`<li class="page-item ${currentPage === totalPages || totalPages === 0 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="loadMembers(${currentPage + 1}, '${searchTerm}', '${activateFilter}', '${testStatusFilter}')"><i class="fas fa-chevron-right"></i></a>
                </li>`);
            }

            function showAddModal() {
                isEditMode = false;
                $('#memberModalLabel').text('Add Member');
                $('#memberForm')[0].reset();
                $('#memberKey').val('');
                $('#password').prop('required', true);
                $('#toeicScoreStudy').val('');
                $('#toeicScoreExam').val('');
                populateDepartmentDropdown();
                $('#memberModal').modal('show');
            }

            function showEditModal(memberKey) {
                const member = members.find(m => m.MemberKey === memberKey);
                if (member) {
                    isEditMode = true;
                    $('#memberModalLabel').text('Edit Member');
                    $('#memberKey').val(member.MemberKey);
                    $('#memberID').val(member.MemberID);
                    $('#memberName').val(member.MemberName);
                    $('#password').val('').prop('required', false);
                    $('#gender').val(member.Gender === 1 ? '1' : '0');
                    $('#yearOld').val(member.YearOld);
                    $('#toeicScoreStudy').val(member.ToeicScoreStudy !== null ? member.ToeicScoreStudy : '');
                    $('#toeicScoreExam').val(member.ToeicScoreExam !== null ? member.ToeicScoreExam : '');
                    $('#activate').val(member.Activate ? '1' : '0');
                    populateDepartmentDropdown(member.DepartmentKey ? member.DepartmentKey.toString() : '');
                    $('#memberModal').modal('show');
                } else {
                    showAlert('danger', 'Member not found.');
                }
            }

            function showDeleteModal(memberKey) {
                currentMemberKey = memberKey;
                $('#deleteModal').modal('show');
            }

            function showDetailsModal(memberKey) {
                currentMemberKey = memberKey;
                $.ajax({
                    url: '/Manage/Members?handler=GetTestDetails',
                    method: 'GET',
                    data: { memberKey: memberKey },
                    success: function (data) {
                        const tbody = $('#testDetailsBody');
                        tbody.empty();
                        if (Array.isArray(data) && data.length > 0) {
                            data.forEach(test => {
                                const statusText = test.Status === 0 ? 'In Progress' :
                                    test.Status === 1 ? 'Completed' :
                                        test.Status === 2 ? 'Score Edited' :
                                            test.Status === 99 ? 'Cancelled' : 'Unknown';
                                const timeText = test.Time !== null ? `${test.Time} seconds` : 'N/A';
                                tbody.append(`
                                            <tr>
                                                <td>${test.TestName || 'N/A'}</td>
                                                <td>${test.TestScore !== null ? test.TestScore : 'None'}</td>
                                                <td>${test.StartTime || 'N/A'}</td>
                                                <td>${test.EndTime || 'Not Completed'}</td>
                                                <td>${timeText}</td>
                                                <td>${statusText}</td>
                                                <td>
                                                    <button class="btn btn-action btn-details" onclick="viewTestResult('${test.TestKey}', '${test.ResultKey}')"><i class="fas fa-eye"></i></button>
                                                    <button class="btn btn-action btn-edit" onclick="showEditTestModal('${test.ResultKey}', ${test.TestScore !== null ? test.TestScore : 0})"><i class="fas fa-edit"></i></button>
                                                </td>
                                            </tr>
                                        `);
                            });
                        } else {
                            tbody.append('<tr><td colspan="7" class="text-center">No tests available.</td></tr>');
                        }

                        // Fetch test score history
                        $.ajax({
                            url: '/Manage/Members?handler=GetTestScoreHistory',
                            method: 'GET',
                            data: { memberKey: memberKey },
                            success: function (history) {
                                createChart('listeningScoreChart', 'Listening Score', 'ListeningScore', '#0288D1');
                                createChart('readingScoreChart', 'Reading Score', 'ReadingScore', '#FFD54F');
                                createChart('testScoreChart', 'Test Score', 'TestScore', '#4FC3F7');
                            },
                            error: function () {
                                showAlert('danger', 'Failed to load test score history.');
                            }
                        });

                        $('#detailsModal').modal('show');
                    },
                    error: function () {
                        showAlert('danger', 'Failed to load test list.');
                    }
                });
            }

            function viewTestResult(testKey, resultKey) {
                const url = `https://localhost:7003/Test/ResultTest?testKey=${testKey}&resultKey=${resultKey}`;
                window.open(url, '_blank');
            }

            function showEditTestModal(resultKey, testScore) {
                $('#editResultKey').val(resultKey);
                $('#editTestScore').val(testScore);
                $('#editTestModal').modal('show');
            }

            $('#editTestForm').on('submit', function (e) {
                e.preventDefault();
                const formData = {
                    ResultKey: $('#editResultKey').val(),
                    TestScore: parseInt($('#editTestScore').val())
                };

                $.ajax({
                    url: '/Manage/Members?handler=UpdateTestScore',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (data) {
                        $('#editTestModal').modal('hide');
                        $('#detailsModal').modal('hide');
                        showAlert('success', data.message || 'Score updated successfully!');
                        showDetailsModal(currentMemberKey);
                    },
                    error: function (xhr) {
                        let errorMessage = 'Failed to update score.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }
                        showAlert('danger', errorMessage);
                    }
                });
            });

            function cancelTest() {
                const formData = {
                    ResultKey: $('#editResultKey').val()
                };

                $.ajax({
                    url: '/Manage/Members?handler=CancelTest',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (data) {
                        $('#editTestModal').modal('hide');
                        $('#detailsModal').modal('hide');
                        showAlert('success', data.message || 'Test cancelled successfully!');
                        showDetailsModal(currentMemberKey);
                    },
                    error: function (xhr) {
                        let errorMessage = 'Failed to cancel test.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }
                        showAlert('danger', errorMessage);
                    }
                });
            }

            function confirmDelete() {
                deleteMember(currentMemberKey);
                $('#deleteModal').modal('hide');
            }

            function populateDepartmentDropdown(selectedKey = '') {
                $.ajax({
                    url: '/Manage/Members?handler=GetDepartments',
                    method: 'GET',
                    success: function (data) {
                        const deptSelect = $('#departmentKey');
                        deptSelect.empty();
                        deptSelect.append('<option value="">Not Linked</option>');
                        if (Array.isArray(data)) {
                            data.forEach(dept => {
                                if (dept && dept.DepartmentKey && dept.DepartmentName) {
                                    const isSelected = dept.DepartmentKey.toString() === selectedKey ? 'selected' : '';
                                    deptSelect.append(`<option value="${dept.DepartmentKey}" ${isSelected}>${dept.DepartmentName}</option>`);
                                }
                            });
                        }
                    },
                    error: function () {
                        showAlert('danger', 'Failed to load department list.');
                    }
                });
            }

            $('#memberForm').on('submit', function (e) {
                e.preventDefault();
                const formData = {
                    MemberKey: $('#memberKey').val() || '00000000-0000-0000-0000-000000000000',
                    MemberID: $('#memberID').val(),
                    MemberName: $('#memberName').val(),
                    Password: $('#password').val() || null,
                    Gender: parseInt($('#gender').val()),
                    YearOld: parseInt($('#yearOld').val()),
                    ToeicScoreStudy: $('#toeicScoreStudy').val() ? parseInt($('#toeicScoreStudy').val()) : null,
                    ToeicScoreExam: $('#toeicScoreExam').val() ? parseInt($('#toeicScoreExam').val()) : null,
                    DepartmentKey: $('#departmentKey').val() || null,
                    Activate: $('#activate').val() === '1'
                };

                const url = isEditMode ? '/Manage/Members?handler=Update' : '/Manage/Members?handler=Create';
                $.ajax({
                    url: url,
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (data) {
                        $('#memberModal').modal('hide');
                        showAlert('success', data.message || (isEditMode ? 'Member updated successfully!' : 'Member added successfully!'));
                        loadMembers(currentPage, searchTerm, activateFilter, testStatusFilter);
                    },
                    error: function () {
                        showAlert('danger', isEditMode ? 'Update failed.' : 'Add failed.');
                    }
                });
            });

            function deleteMember(memberKey) {
                $.ajax({
                    url: '/Manage/Members?handler=Delete',
                    method: 'GET',
                    data: { memberKey: memberKey },
                    success: function () {
                        showAlert('success', 'Member deleted successfully!');
                        loadMembers(currentPage, searchTerm, activateFilter, testStatusFilter);
                    },
                    error: function () {
                        showAlert('danger', 'Failed to delete member.');
                    }
                });
            }

            function searchMembers() {
                const searchValue = $('#searchInput').val().trim();
                const activateValue = $('#activateFilter').val();
                const testStatusValue = $('#testStatusFilter').val();
                loadMembers(1, searchValue, activateValue, testStatusValue);
            }

            function showAlert(type, message) {
                const alertDiv = $(`
                            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                                ${message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        `);
                $('body').append(alertDiv);
                setTimeout(() => alertDiv.alert('close'), 3000);
            }

            // Chart creation function
            function createChart(canvasId, label, dataKey, color) {
                $.ajax({
                    url: '/Manage/Members?handler=GetTestScoreHistory',
                    method: 'GET',
                    data: { memberKey: currentMemberKey },
                    success: function (history) {
                        if (!history || history.length === 0) {
                            const canvasEl = document.getElementById(canvasId);
                            if (canvasEl && canvasEl.parentElement) {
                                canvasEl.parentElement.style.display = 'none';
                            }
                            console.warn(`No data available for ${label} chart.`);
                            return;
                        }

                        const labels = history.map(item => {
                            const date = new Date(item.StartTime);
                            return date.toLocaleDateString('en-US', { day: '2-digit', month: '2-digit', year: 'numeric' });
                        });

                        const scores = history.map(item => {
                            const score = item[dataKey] || 0;
                            return Number(score) || 0;
                        });

                        const ctx = document.getElementById(canvasId).getContext('2d');
                        if (window[canvasId + 'Chart'] instanceof Chart) {
                            window[canvasId + 'Chart'].destroy();
                        }

                        window[canvasId + 'Chart'] = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: labels,
                                datasets: [
                                    {
                                        type: 'bar',
                                        label: label,
                                        data: scores,
                                        backgroundColor: color + "80",
                                        borderColor: color,
                                        borderWidth: 2,
                                        barThickness: 20,
                                    },
                                    {
                                        type: 'line',
                                        label: label + " Trend",
                                        data: scores,
                                        fill: false,
                                        borderColor: color,
                                        borderWidth: 2,
                                        tension: 0.3,
                                        pointRadius: 4,
                                        pointBackgroundColor: color,
                                    }
                                ]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: {
                                        display: true,
                                        position: 'top',
                                        labels: { font: { family: 'Poppins', size: 12, weight: '600' }, color: '#333' }
                                    },
                                    tooltip: {
                                        backgroundColor: '#0288D1',
                                        titleFont: { family: 'Poppins', size: 12 },
