        /* Table container for sticky header */
        .table-container {
            max-height: 500px;
            overflow-y: auto;
            overflow-x: hidden;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
            background: #FFFFFF;
            border: 1px solid #E8EEF7;
            margin-bottom: 20px;
        }

        /* Table custom */
        .table-custom {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: #FFFFFF;
            font-size: 0.9375rem;
            color: #2C3E50;
            margin-bottom: 0;
        }

            /* Header bảng - Navy Gradient */
            .table-custom thead th {
                position: sticky;
                top: 0;
                background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #7e8ba3 100%);
                color: #FFFFFF;
                text-align: center;
                padding: 14px 10px;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 14px;
                border-bottom: 2px solid #1e3c72;
                z-index: 10;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
                transition: all 0.3s ease;
            }

                .table-custom thead th:hover {
                    background: linear-gradient(135deg, #2a5298 0%, #3d5a9e 50%, #8a94a8 100%);
                    transform: translateY(-1px);
                }

                .table-custom thead th:first-child {
                    border-top-left-radius: 15px;
                }

                .table-custom thead th:last-child {
                    border-top-right-radius: 15px;
                }

            /* Data rows - Styling nổi bật */
            .table-custom tbody td {
                vertical-align: middle;
                padding: 12px 10px;
                border-bottom: 1px solid #ECF0F1;
                font-size: 14px;
                color: #2C3E50;
                transition: all 0.3s ease;
                max-width: 200px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

                /* DepartmentID - Nổi bật */
                .table-custom tbody td:nth-child(1) {
                    font-weight: 600;
                    color: #2980B9;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                }

                /* DepartmentName - Đậm hơn */
                .table-custom tbody td:nth-child(2) {
                    font-weight: 600;
                    color: #2C3E50;
                }

                /* ShortName - Màu phụ */
                .table-custom tbody td:nth-child(3) {
                    color: #7F8C8D;
                    font-weight: 500;
                }

                /* Address - Màu xanh dương nhạt */
                .table-custom tbody td:nth-child(4) {
                    color: #5DADE2;
                    font-style: italic;
                }

                /* Parent - Màu tím nhạt */
                .table-custom tbody td:nth-child(5) {
                    color: #9B59B6;
                    font-weight: 500;
                }

            /* Hover effect cho rows */
            .table-custom tbody tr {
                transition: all 0.3s ease;
            }

                .table-custom tbody tr:hover {
                    background: linear-gradient(90deg, #F8FAFF, #EBF5FF);
                    box-shadow: 0 2px 8px rgba(52, 152, 219, 0.15);
                    transform: scale(1.002);
                }

                /* Bo tròn cho ô đầu và cuối mỗi hàng */
                .table-custom tbody tr td:first-child {
                    border-top-left-radius: 8px;
                    border-bottom-left-radius: 8px;
                }

                .table-custom tbody tr td:last-child {
                    border-top-right-radius: 8px;
                    border-bottom-right-radius: 8px;
                }

            /* Viền cho các ô */
            .table-custom td,
            .table-custom th {
                border-right: 1px solid #ECF0F1;
            }

                .table-custom td:last-child,
                .table-custom th:last-child {
                    border-right: none;
                }

                /* Cột hành động */
                .table-custom td:last-child {
                    display: flex;
                    gap: 8px;
                    justify-content: center;
                    align-items: center;
                    border-bottom: 1px solid #ECF0F1;
                }

            /* Button styles trong bảng */
            .table-custom .btn-edit,
            .table-custom .btn-delete {
