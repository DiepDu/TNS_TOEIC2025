@*     <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
    @section Scripts {
        <script>
            let departments = [];
            let currentDepartmentKey = null;
            let isEditMode = false;
            let currentPage = 1;
            const pageSize = 10;
            let searchTerm = '';

            // ===== DEBOUNCE HELPER =====
            function debounce(func, delay) {
                let timeout;
                return function(...args) {
                    const context = this;
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(context, args), delay);
                };
            }

            // ===== AUTO-SEARCH FUNCTION =====
            const autoSearch = debounce(function() {
                const searchValue = $('#searchInput').val().trim();
                $('.loading-spinner').show();
                loadDepartments(1, searchValue);
            }, 400); // Chờ 400ms sau khi user ngừng gõ

            $(document).ready(function () {
                loadDepartments(1);
                $('.btn-add').on('click', showAddModal);

                // ✅ AUTO-SEARCH khi gõ
                $('#searchInput').on('keyup', autoSearch);

                // ✅ Trigger search khi nhấn Enter
                $('#searchInput').on('keypress', function(e) {
                    if (e.which === 13) {
                        e.preventDefault();
                        autoSearch();
                    }
                });
            });

            function loadDepartments(page, search = '') {
                currentPage = page || 1;
                searchTerm = search;

                console.log('Loading page:', currentPage);
                $.ajax({
                    url: '/Manage/Department?handler=GetDepartments',
                    method: 'GET',
                    data: { page: currentPage, pageSize: pageSize, search: searchTerm },
                    cache: false,
                    beforeSend: function () {
                        console.log('Sending request with data:', { page: currentPage, pageSize: pageSize, search: searchTerm });
                    },
                    success: function (data) {
                        console.log('Received data:', data);
                        $('.loading-spinner').hide();
                        if (data.status !== "OK") {
                            showAlert('danger', data.message || 'Unable to load department list.');
                            return;
                        }
                        departments = data.data || [];
                        renderDepartments();
                        renderPagination(data.totalItems);
                        populateParentKeyDropdown();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error:', error);
                        $('.loading-spinner').hide();
                        showAlert('danger', xhr.responseJSON?.message || 'Unable to load department list.');
                    }
                });
            }

            function renderDepartments() {
                const tbody = $('#departmentTableBody');
                tbody.empty();

                if (!Array.isArray(departments)) {
                    console.error('departments is not an array:', departments);
                    showAlert('danger', 'Invalid department data.');
                    return;
                }

                if (departments.length === 0) {
                    tbody.append('<tr><td colspan="6" class="text-center text-muted p-4">No departments found</td></tr>');
                    return;
                }

                departments.forEach(dept => {
                    const departmentID = dept.DepartmentID || 'N/A';
                    const departmentName = dept.DepartmentName || 'N/A';
                    const shortName = dept.ShortName || 'N/A';
                    const address = dept.Address || '<span style="color: #95A5A6;">No address</span>';
                    const parentShortName = dept.ParentShortName || '<span style="color: #95A5A6;">Do not</span>';
                    const departmentKey = dept.DepartmentKey || '';

                    tbody.append(`
                        <tr>
                            <td>${departmentID}</td>
                            <td>${departmentName}</td>
                            <td>${shortName}</td>
                            <td>${address}</td>
                            <td>${parentShortName}</td>
                            <td>
                                <button class="btn btn-edit" title="Edit" onclick="showEditModal('${departmentKey}')"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-delete" title="Delete" onclick="showDeleteModal('${departmentKey}')"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    `);
                });
            }

            // ✅ Bỏ hàm searchDepartments() cũ - không cần nữa vì đã có auto-search

            function renderPagination(totalItems) {
                const totalPages = Math.ceil(totalItems / pageSize);
                const pagination = $('#pagination');
                pagination.empty();

                if (totalPages <= 1) return; // Không hiển thị pagination nếu chỉ 1 trang

                pagination.append(`
                    <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-page="${currentPage - 1}"><i class="fas fa-chevron-left"></i></a>
                    </li>
                `);

                for (let i = 1; i <= totalPages; i++) {
                    pagination.append(`
                        <li class="page-item ${i === currentPage ? 'active' : ''}">
                            <a class="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }

                pagination.append(`
                    <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                        <a class="page-link" href="#" data-page="${currentPage + 1}"><i class="fas fa-chevron-right"></i></a>
                    </li>
                `);

                $('#pagination .page-link').off('click').on('click', function (e) {
                    e.preventDefault();
                    const page = parseInt($(this).data('page'));
                    console.log('Clicked page:', page);
                    if (page >= 1 && page <= totalPages) {
                        loadDepartments(page, searchTerm);
                    }
                });
            }

            function populateParentKeyDropdown() {
                const parentKeySelect = $('#parentKey');
                parentKeySelect.empty();
                parentKeySelect.append('<option value="">Do not</option>');
                if (!Array.isArray(departments)) return;
                departments.forEach(dept => {
                    if (dept.DepartmentKey !== $('#departmentKey').val()) {
                        parentKeySelect.append(`<option value="${dept.DepartmentKey}">${dept.ShortName || 'N/A'}</option>`);
                    }
                });
            }

            function showAddModal() {
                isEditMode = false;
                $('#departmentModalLabel').text('Add Department');
                $('#departmentForm')[0].reset();
                $('#departmentKey').val('');
                $('#forReport').val('');
                populateParentKeyDropdown();
                $('#departmentModal').modal('show');
            }

            function showEditModal(departmentKey) {
                const dept = departments.find(d => d.DepartmentKey === departmentKey);
                if (dept) {
                    isEditMode = true;
                    $('#departmentModalLabel').text('Edit Department');
                    $('#departmentKey').val(dept.DepartmentKey || '');
                    $('#departmentID').val(dept.DepartmentID || '');
                    $('#departmentName').val(dept.DepartmentName || '');
                    $('#shortName').val(dept.ShortName || '');
                    $('#address').val(dept.Address || '');
                    $('#trcd').val(dept.TRCD || '');
                    $('#origanizationID').val(dept.OriganizationID || '');
                    $('#rank').val(dept.Rank || '');
                    $('#class').val(dept.Class || '');
                    $('#forReport').val(dept.ForReport || '');
                    populateParentKeyDropdown();
                    $('#parentKey').val(dept.ParentKey || '');
                    $('#departmentModal').modal('show');
                } else {
                    showAlert('danger', 'No department found to edit.');
                }
            }

            function showDeleteModal(departmentKey) {
                currentDepartmentKey = departmentKey;
                $('#deleteModal').modal('show');
            }

            $('#departmentForm').on('submit', function (e) {
                e.preventDefault();
                const formData = {
                    DepartmentKey: $('#departmentKey').val() || '00000000-0000-0000-0000-000000000000',
                    DepartmentID: $('#departmentID').val(),
                    DepartmentName: $('#departmentName').val(),
                    ShortName: $('#shortName').val() || null,
                    Address: $('#address').val() || null,
                    TRCD: $('#trcd').val() || null,
                    ParentKey: $('#parentKey').val() || null,
                    OriganizationID: $('#origanizationID').val() || null,
                    Rank: $('#rank').val() ? parseInt($('#rank').val()) : null,
                    Class: $('#class').val() || null,
                    ForReport: $('#forReport').val() || null
                };

                const url = isEditMode ? '/Manage/Department?handler=Update' : '/Manage/Department?handler=Create';
                $.ajax({
                    url: url,
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (data) {
                        $('#departmentModal').modal('hide');
                        showAlert('success', data.message || (isEditMode ? 'Update successful!' : 'Add successful!'));
                        loadDepartments(currentPage, searchTerm);
                    },
                    error: function (xhr) {
                        showAlert('danger', xhr.responseJSON?.message || (isEditMode ? 'Update failed.' : 'Add failed.'));
                    }
                });
            });

            $('#confirmDeleteBtn').on('click', function () {
                $.ajax({
                    url: '/Manage/Department?handler=Delete',
                    method: 'GET',
                    data: { departmentKey: currentDepartmentKey },
                    success: function (data) {
                        $('#deleteModal').modal('hide');
                        if (data.status === "OK") {
                            showAlert('success', data.message || 'Delete Successful!');
                            loadDepartments(currentPage, searchTerm);
                        } else {
                            showAlert('danger', data.message || 'Delete failed.');
                        }
                    },
                    error: function () {
                        $('#deleteModal').modal('hide');
                        showAlert('danger', 'Delete failed.');
                    }
                });
            });

            function showAlert(type, message) {
                const alertDiv = $(`
                    <div class="alert alert-${type} alert-dismissible fade show top-right" role="alert">
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `);
                $('body').append(alertDiv);
                setTimeout(() => alertDiv.alert('close'), 3000);
            }
        </script>
    }
</body>
