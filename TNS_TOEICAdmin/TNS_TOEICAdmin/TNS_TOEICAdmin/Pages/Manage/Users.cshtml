    @section Scripts {
        <script>
            let users = [];
            let roles = [];
            let currentUserKey = null;
            let currentPage = 1;
            const pageSize = 10;
            let searchTerm = '';
            let activateFilter = '';
            let isEditMode = false;
            let totalUsers = 0;
                               $(document).ready(function () {
                loadUsers();
                loadRoles();

                // ✅ SỬA: Chỉ bắt nút Add User bằng ID
                $('#btnAddUser').on('click', showAddModal);

                // Auto-search
                $('#searchInput').on('keyup', autoSearch);
                $('#searchInput').on('keypress', function(e) {
                    if (e.which === 13) {
                        e.preventDefault();
                        autoSearch();
                    }
                });
            });

                      function loadUsers(page = 1, search = '', activate = '') {
                currentPage = page;
                searchTerm = search;
                activateFilter = activate;

                let data = { page: currentPage, pageSize: pageSize };
                if (search.trim() !== '') {
                    data.search = search;
                }
                if (activate !== '') {
                    data.activate = activate;
                }

                $.ajax({
                    url: '/Manage/Users?handler=GetUsers',
                    method: 'GET',
                    data: data,
                    success: function (response) {
                        // ✅ FIX: Nhận cả users VÀ totalCount
                        users = Array.isArray(response.users) ? response.users : [];
                        totalUsers = response.totalCount || 0;
                        renderUsers();
                        renderPagination();
                    },
                    error: function () {
                        showAlert('danger', 'Failed to load user list.');
                    }
                });
            }

            function loadRoles() {
                $.ajax({
                    url: '/Manage/Users?handler=GetAllRoles',
                    method: 'GET',
                    success: function (data) {
                        roles = Array.isArray(data) ? data : [];
                        populateRoleSelect();
                    },
                    error: function () {
                        showAlert('danger', 'Failed to load role list.');
                    }
                });
            }

                        function renderUsers() {
                const tbody = $('#userTableBody');
                tbody.empty();

                // ✅ Backend đã pagination rồi, không cần slice nữa
                users.forEach(u => {
                    // ✅ Role tags với styling đẹp
                    const roleNames = u.Roles && u.Roles.length > 0
                        ? u.Roles.map(r => `<span class="role-tag">${r.RoleName}</span>`).join(' ')
                        : '<span style="color: #95A5A6; font-style: italic;">No Roles</span>';

                    // ✅ Status badge
                    const statusBadge = u.Activate
                        ? '<span class="status-badge status-activated">Activated</span>'
                        : '<span class="status-badge status-locked">Locked</span>';

                    // ✅ Failed attempts với màu cảnh báo
                    const failedAttempts = u.FailedPasswordAttemptCount || 0;
                    let failedClass = '';
                    if (failedAttempts >= 3) failedClass = 'danger';
                    else if (failedAttempts > 0) failedClass = 'warning';
                    const failedAttemptsHtml = `<span class="failed-attempts ${failedClass}">${failedAttempts}</span>`;

                    // ✅ Format date đẹp hơn
                    const lastLogin = u.LastLoginDate
                        ? new Date(u.LastLoginDate).toLocaleString('vi-VN', {
                            year: 'numeric', month: '2-digit', day: '2-digit',
                            hour: '2-digit', minute: '2-digit'
                          })
                        : '<span style="color: #95A5A6; font-style: italic;">Never</span>';

                    tbody.append(`
                        <tr>
                            <td class="username-cell">${u.UserName || 'N/A'}</td>
                            <td>${u.Description || '<span style="color: #BDC3C7;">—</span>'}</td>
                            <td>${statusBadge}</td>
                            <td>${lastLogin}</td>
                            <td>${failedAttemptsHtml}</td>
                            <td><strong>${u.EmployeeName || '<span style="color: #95A5A6;">Not Linked</span>'}</strong></td>
                            <td>${roleNames}</td>
                            <td>
                                <div class="actions-container">
                                    <button class="btn btn-action btn-edit" onclick="showEditModal('${u.UserKey}')" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-action btn-roles" onclick="showRolesModal('${u.UserKey}')" title="Manage Roles">
                                        <i class="fas fa-user-shield"></i>
                                    </button>
                                    <button class="btn btn-action btn-delete" onclick="showDeleteModal('${u.UserKey}')" title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    `);
                });
                         setTimeout(adjustTableAlignment, 50);
            }
            function adjustTableAlignment() {
    const scrollContainer = $('.table-body-scroll');
    const hasScrollbar = scrollContainer[0].scrollHeight > scrollContainer[0].clientHeight;
    
    if (hasScrollbar) {
        $('.table-container > table').css({
            'width': 'calc(100% - 8px)',
            'margin-right': '8px'
        });
    } else {
        $('.table-container > table').css({
            'width': '100%',
            'margin-right': '0'
        });
    }
            }

            function renderPagination() {
                const totalPages = Math.ceil(totalUsers / pageSize); // ← DÙNG totalUsers
                const pagination = $('#pagination');
                pagination.empty();

                if (totalPages <= 1) return; // ← Không hiển thị pagination nếu chỉ 1 page

                pagination.append(`<li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="event.preventDefault(); loadUsers(${currentPage - 1}, '${searchTerm}', '${activateFilter}')"><i class="fas fa-chevron-left"></i></a>
                </li>`);

                for (let i = 1; i <= totalPages; i++) {
                    pagination.append(`<li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="event.preventDefault(); loadUsers(${i}, '${searchTerm}', '${activateFilter}')">${i}</a>
                    </li>`);
                }

                pagination.append(`<li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="event.preventDefault(); loadUsers(${currentPage + 1}, '${searchTerm}', '${activateFilter}')"><i class="fas fa-chevron-right"></i></a>
                </li>`);
            }

            function showAddModal() {
                isEditMode = false;
                $('#userModalLabel').text('Add User');
                $('#userForm')[0].reset();
                $('#userKey').val('');
                $('#password').prop('required', true);
                populateEmployeeDropdown();
                $('#userModal').modal('show');
            }

            function showEditModal(userKey) {
                const user = users.find(u => u.UserKey === userKey);
                if (user) {
                    isEditMode = true;
                    $('#userModalLabel').text('Edit User');
                    $('#userKey').val(user.UserKey);
                    $('#userName').val(user.UserName);
                    $('#password').val('').prop('required', false);
                    $('#description').val(user.Description || '');
                    $('#activate').val(user.Activate ? '1' : '0');
                    $('#expireDate').val(user.ExpireDate ? user.ExpireDate.split(' ')[0] : '');
                    populateEmployeeDropdown(user.EmployeeKey ? user.EmployeeKey.toString() : '');
                    $('#userModal').modal('show');
                }
            }

                              function showDeleteModal(userKey) {
                        const user = users.find(u => u.UserKey === userKey);
                        const userName = user ? user.UserName : 'this user';

                        showConfirmModal(
                            `Are you sure you want to delete user "${userName}"?\n\nThis action cannot be undone and will also delete all associated data.`,
                            function() {
                                deleteUser(userKey);
                            }
                        );
                    }

                    // ===== CONFIRMATION MODAL HELPER =====
                    function showConfirmModal(message, onConfirm) {
                        $('#confirmMessage').text(message);
                        const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));

                        // Remove old event listeners
                        $('#confirmBtn').off('click');

                        // Add new event listener
                        $('#confirmBtn').on('click', function() {
                            confirmModal.hide();
                            if (typeof onConfirm === 'function') {
                                onConfirm();
                            }
                        });

                        confirmModal.show();
                    }

            function showRolesModal(userKey) {
                currentUserKey = userKey;
                const user = users.find(u => u.UserKey === userKey);
                if (user) {
                    $('#rolesModalLabel').text(`Assign Roles for ${user.UserName}`);
                    renderRoles(user.Roles || []);
                    $('#rolesModal').modal('show');
                }
            }

            function populateEmployeeDropdown(selectedKey = '') {
                $.ajax({
                    url: '/Manage/Users?handler=GetEmployees',
                    method: 'GET',
                    success: function (data) {
                        const employeeSelect = $('#employeeKey');
                        employeeSelect.empty();
                        employeeSelect.append('<option value="">Not Linked</option>');
                        data.forEach(emp => {
                            const isSelected = emp.EmployeeKey.toString() === selectedKey ? 'selected' : '';
                            employeeSelect.append(`<option value="${emp.EmployeeKey}" ${isSelected}>${emp.FirstName} ${emp.LastName}</option>`);
                        });
                    },
                    error: function () {
                        showAlert('danger', 'Failed to load employee list.');
                    }
                });
            }

            function populateRoleSelect() {
                const roleSelect = $('#roleSelect');
                roleSelect.empty();
                roleSelect.append('<option value="">Select Role</option>');
                roles.forEach(role => {
                    roleSelect.append(`<option value="${role.RoleKey}">${role.RoleName}</option>`);
                });
            }

            function renderRoles(userRoles) {
                const tbody = $('#rolesTableBody');
                tbody.empty();
                userRoles.forEach(role => {
                    tbody.append(`
                        <tr data-role-key="${role.RoleKey}">
                            <td>${role.RoleName}</td>
                            <td><input type="checkbox" ${role.RoleRead ? 'checked' : ''} data-field="RoleRead"></td>
                            <td><input type="checkbox" ${role.RoleEdit ? 'checked' : ''} data-field="RoleEdit"></td>
                            <td><input type="checkbox" ${role.RoleAdd ? 'checked' : ''} data-field="RoleAdd"></td>
                            <td><input type="checkbox" ${role.RoleDel ? 'checked' : ''} data-field="RoleDel"></td>
                            <td><input type="checkbox" ${role.RoleApproval ? 'checked' : ''} data-field="RoleApproval"></td>
                            <td><button class="btn btn-action btn-delete" onclick="removeRole('${role.RoleKey}')"><i class="fas fa-trash"></i></button></td>
                        </tr>
                    `);
                });
            }

            function addRole() {
                const roleKey = $('#roleSelect').val();
                if (!roleKey) return;
                const role = roles.find(r => r.RoleKey === roleKey);
                const user = users.find(u => u.UserKey === currentUserKey);
                if (user && role && !user.Roles.some(r => r.RoleKey === roleKey)) {
                    user.Roles.push({ RoleKey: role.RoleKey, RoleName: role.RoleName, RoleRead: false, RoleEdit: false, RoleAdd: false, RoleDel: false, RoleApproval: false });
                    renderRoles(user.Roles);
                }
            }

            function removeRole(roleKey) {
                const user = users.find(u => u.UserKey === currentUserKey);
                if (user) {
                    user.Roles = user.Roles.filter(r => r.RoleKey !== roleKey);
                    renderRoles(user.Roles);
                }
            }

            function saveRoles() {
                const user = users.find(u => u.UserKey === currentUserKey);
                if (user) {
                    const updatedRoles = [];
                    $('#rolesTableBody tr').each(function () {
                        const roleKey = $(this).data('role-key');
                        const role = {
                            RoleKey: roleKey,
                            RoleName: $(this).find('td:first').text(),
                            RoleRead: $(this).find('[data-field="RoleRead"]').is(':checked'),
                            RoleEdit: $(this).find('[data-field="RoleEdit"]').is(':checked'),
                            RoleAdd: $(this).find('[data-field="RoleAdd"]').is(':checked'),
                            RoleDel: $(this).find('[data-field="RoleDel"]').is(':checked'),
                            RoleApproval: $(this).find('[data-field="RoleApproval"]').is(':checked')
                        };
                        updatedRoles.push(role);
                    });

                    $.ajax({
                        url: '/Manage/Users?handler=UpdateRoles',
                        method: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ UserKey: currentUserKey, Roles: updatedRoles }),
                        headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                        success: function () {
                            user.Roles = updatedRoles;
                            $('#rolesModal').modal('hide');
                            showAlert('success', 'Roles updated successfully!');
                            renderUsers();
                        },
                        error: function () {
                            showAlert('danger', 'Failed to update roles.');
                        }
                    });
                }
            }

            $('#userForm').on('submit', function (e) {
                e.preventDefault();
                const formData = {
                    UserKey: $('#userKey').val() || '00000000-0000-0000-0000-000000000000',
                    UserName: $('#userName').val(),
                    Password: $('#password').val() || null,
                    Description: $('#description').val() || null,
                    EmployeeKey: $('#employeeKey').val() || null,
                    Activate: $('#activate').val() === '1',
                    ExpireDate: $('#expireDate').val() || null
                };

                const url = isEditMode ? '/Manage/Users?handler=Update' : '/Manage/Users?handler=Create';
                $.ajax({
                    url: url,
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    success: function (data) {
                        $('#userModal').modal('hide');
                        showAlert('success', data.message || (isEditMode ? 'User updated successfully!' : 'User added successfully!'));
                        loadUsers(currentPage, searchTerm, activateFilter);
                    },
                    error: function () {
                        showAlert('danger', isEditMode ? 'Update failed.' : 'Add failed.');
                    }
                });
            });

            function deleteUser(userKey) {
                $.ajax({
                    url: '/Manage/Users?handler=Delete',
                    method: 'GET',
                    data: { userKey: userKey },
                    success: function () {
                        showAlert('success', 'User deleted successfully!');
                        loadUsers(currentPage, searchTerm, activateFilter);
                    },
                    error: function () {
                        showAlert('danger', 'Failed to delete user.');
                    }
                });
            }

                      // ✅ Debounce helper
            function debounce(func, delay) {
                let timeout;
                return function(...args) {
                    const context = this;
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(context, args), delay);
                };
            }

            // ✅ Auto-search function
            const autoSearch = debounce(function() {
                const searchValue = $('#searchInput').val().trim();
                const activateValue = $('#activateFilter').val() || '';
                loadUsers(1, searchValue, activateValue);
            }, 400); // Chờ 400ms sau khi user ngừng gõ

            function searchUsers() {
                autoSearch();
            }

            function showAlert(type, message) {
                const alertDiv = $(`
                    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `);
                $('body').append(alertDiv);
                setTimeout(() => alertDiv.alert('close'), 3000);
            }
        </script>
    }
