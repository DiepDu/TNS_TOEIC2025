@section Scripts {
    <script>
        let _DataView;

        $(document).ready(function () {
            restorePageState();

            $('.table-wrapper').on('scroll', function() {
                if (sessionStorage.getItem('part7QuestionSubListState')) {
                    const state = JSON.parse(sessionStorage.getItem('part7QuestionSubListState'));
                    state.tableScrollPosition = $('.table-wrapper').scrollTop();
                    sessionStorage.setItem('part7QuestionSubListState', JSON.stringify(state));
                }
            });

            $(window).on('scroll', function() {
                if (sessionStorage.getItem('part7QuestionSubListState')) {
                    const state = JSON.parse(sessionStorage.getItem('part7QuestionSubListState'));
                    state.pageScrollPosition = $(window).scrollTop();
                    sessionStorage.setItem('part7QuestionSubListState', JSON.stringify(state));
                }
            });
        });

        function savePageState() {
            const state = {
                questionKey: $('#QuestionKey').text().trim(),
                tableScrollPosition: $('.table-wrapper').scrollTop(),
                pageScrollPosition: $(window).scrollTop()
            };
            sessionStorage.setItem('part7QuestionSubListState', JSON.stringify(state));
        }

        function restorePageState() {
            const savedState = sessionStorage.getItem('part7QuestionSubListState');

            LV_LoadData_Ajax(function() {
                if (savedState) {
                    const state = JSON.parse(savedState);

                    if (state.tableScrollPosition) {
                        setTimeout(function() {
                            $('.table-wrapper').scrollTop(state.tableScrollPosition);
                        }, 100);
                    }

                    if (state.pageScrollPosition) {
                        setTimeout(function() {
                            $('html, body').scrollTop(state.pageScrollPosition);
                        }, 150);
                    }
                }
            });
        }

        function clearPageState() {
            sessionStorage.removeItem('part7QuestionSubListState');
        }

        function LV_LoadData_Ajax(callback) {
            $("#LV_Waiting").css("display", "flex");
            const zQuestionKey = $("#QuestionKey").text().trim();
            const zDataRequest = { "QuestionKey": zQuestionKey };

            $.ajax({
                type: 'POST',
                url: "/TOEICPart7/QuestionSubList?handler=LoadData",
                data: JSON.stringify(zDataRequest),
                contentType: "application/json",
                dataType: "json",
                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
            })
            .done(function (dataResponse) {
                _DataView = dataResponse;
                LV_DisplayData();
                $("#LV_Waiting").css("display", "none");

                const totalQuestions = dataResponse ? dataResponse.length : 0;
                $("#Info_View").html(`<i class='fas fa-info-circle me-2'></i>Total: <strong>${totalQuestions}</strong> sub question${totalQuestions !== 1 ? 's' : ''}`);

                if (typeof callback === 'function') {
                    callback();
                }
            })
            .fail(function (error) {
                $("#LV_Waiting").css("display", "none");
                console.error('Error loading sub questions:', error);
                alert('Error: ' + error.responseText);
            });
        }

              function LV_DisplayData() {
            let zContent = "";
            const n = _DataView ? _DataView.length : 0;

            if (n === 0) {
                zContent = `
                    <tr>
                        <td colspan="10" class="text-center py-5">
                            <div class="empty-state">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted fw-bold">No sub questions found.</p>
                                <p class="text-muted small">Click "Add New" to create the first question.</p>
                            </div>
                        </td>
                    </tr>
                `;
            } else {
                for (let i = 0; i < n; i++) {
                    const item = _DataView[i];

                    // ===== CORRECT RATE =====
                    let correctRate = item.CorrectRate !== null ? item.CorrectRate : null;
                    let correctRateText = correctRate !== null ? correctRate.toFixed(2) + "%" : "N/A";
                    let correctRateClass = "";

                    if (correctRate !== null) {
                        if (correctRate >= 70) correctRateClass = "correct-rate-high";
                        else if (correctRate <= 30) correctRateClass = "correct-rate-low";
                        else correctRateClass = "correct-rate-medium";
                    }

                    let anomaly = item.Anomaly !== null ? item.Anomaly : "N/A";

                    // ===== IRT PROCESSING =====
                    let quality = item.Quality || "";
                    let irtDiff = item.IrtDifficulty;
                    let irtDisc = item.IrtDiscrimination;
                    let irtGuess = item.IrtGuessing;
                    let confidence = item.ConfidenceLevel || "";
                    let lastAnalyzed = item.LastAnalyzed || "";

                    let qualityBadge = "";
                    let tooltipContent = "";

                    if (quality === "" || quality === "N/A" || !irtDiff || !irtDisc || !irtGuess) {
                        qualityBadge = "<span class='irt-quality-badge irt-quality-na'>N/A</span>";
                    } else {
                        let reasons = [];
                        let diffText = "";
                        let diffClass = "";
                        let discText = "";
                        let guessText = "";
                        let reliableIcon = "";
                        let reliableText = "";

                        // Difficulty
                        if (irtDiff < -1) {
                            diffText = "Very Easy (< -1.0)";
                            diffClass = "🟢";
                        } else if (irtDiff < 0) {
                            diffText = "Easy (-1.0 to 0)";
                            diffClass = "🟢";
                        } else if (irtDiff < 1) {
                            diffText = "Medium (0 to 1.0)";
                            diffClass = "🟡";
                        } else if (irtDiff < 2) {
                            diffText = "Hard (1.0 to 2.0)";
                            diffClass = "🔴";
                        } else {
                            diffText = "Very Hard (> 2.0)";
                            diffClass = "🔴";
                            if (irtDiff > 2.5) reasons.push("Difficulty too extreme (> 2.5)");
                        }

                        // Discrimination
                        if (irtDisc < 0.5) {
                            discText = "Poor (< 0.5) - Cannot differentiate students";
                            reasons.push("Low discrimination (< 0.5)");
                        } else if (irtDisc < 1.0) {
                            discText = "Fair (0.5-1.0)";
                        } else {
                            discText = "Good (≥ 1.0) - Differentiates well";
                        }

                        // Guessing
                        if (irtGuess < 0.2) {
                            guessText = "Good (< 0.2) - Hard to guess";
                        } else if (irtGuess < 0.3) {
                            guessText = "Fair (0.2-0.3)";
                        } else {
                            guessText = "Poor (≥ 0.3) - Easy to guess";
                            if (irtGuess > 0.4) reasons.push("High guessing probability (> 0.4)");
                        }

                        // Reliability
                        if (confidence === "High") {
                            reliableIcon = "🟢";
                            reliableText = "High (≥ 100 responses)";
                        } else if (confidence === "Medium") {
                            reliableIcon = "🟡";
                            reliableText = "Medium (30-99 responses)";
                        } else if (confidence === "Low") {
                            reliableIcon = "🔴";
                            reliableText = "Low (< 30 responses)";
                            reasons.push("Insufficient data (< 30 responses)");
                        } else {
                            reliableIcon = "⚪";
                            reliableText = "Unknown";
                        }

                        // Build tooltip
                        tooltipContent = "<div style='font-size: 0.9rem; line-height: 1.6;'>";
                        tooltipContent += "<strong style='color: #3498db; font-size: 1rem; display: block; margin-bottom: 0.5rem;'>IRT Parameters (3PL Model)</strong>";

                        tooltipContent += "<div class='irt-param'>";
                        tooltipContent += "<strong>📊 Difficulty (b):</strong> " + irtDiff.toFixed(2) + "<br>";
                        tooltipContent += "<span style='color: #ecf0f1;'>" + diffClass + " " + diffText + "</span>";
                        tooltipContent += "</div>";

                        tooltipContent += "<div class='irt-param'>";
                        tooltipContent += "<strong>🎯 Discrimination (a):</strong> " + irtDisc.toFixed(2) + "<br>";
                        tooltipContent += "<span style='color: #ecf0f1;'>" + discText + "</span>";
                        tooltipContent += "</div>";

                        tooltipContent += "<div class='irt-param'>";
                        tooltipContent += "<strong>🎲 Guessing (c):</strong> " + irtGuess.toFixed(2) + "<br>";
                        tooltipContent += "<span style='color: #ecf0f1;'>" + guessText + "</span>";
                        tooltipContent += "</div>";

                        tooltipContent += "<div class='irt-param'>";
                        tooltipContent += "<strong>📈 Reliability:</strong> " + reliableIcon + " " + reliableText;
                        tooltipContent += "</div>";

                        if (lastAnalyzed) {
                            tooltipContent += "<div class='irt-param'>";
                            tooltipContent += "<strong>🕒 Last Analyzed:</strong> " + lastAnalyzed;
                            tooltipContent += "</div>";
                        }

                        if (reasons.length > 0) {
                            tooltipContent += "<div style='margin-top: 0.7rem; padding-top: 0.7rem; border-top: 1px solid #34495e;'>";
                            tooltipContent += "<strong style='color: #e74c3c;'>⚠️ Issues Detected:</strong><br>";
                            reasons.forEach(function(reason) {
                                tooltipContent += "<span style='color: #ecf0f1;'>• " + reason + "</span><br>";
                            });
                            tooltipContent += "</div>";
                        }

                        tooltipContent += "</div>";

                        // Badge class
                        let qualityClass = "";
                        let qualityIcon = "";

                        if (quality === "Good" || quality === "Tốt") {
                            qualityClass = "irt-quality-good";
                            qualityIcon = "✅";
                        } else if (quality === "Fair" || quality === "Cần xem lại") {
                            qualityClass = "irt-quality-fair";
                            qualityIcon = "⚠️";
                        } else if (quality === "Poor" || quality === "Kém") {
                            qualityClass = "irt-quality-poor";
                            qualityIcon = "❌";
                        } else {
                            qualityClass = "irt-quality-na";
                            qualityIcon = "❓";
                        }

                        let displayQuality = quality;
                        if (quality === "Tốt") displayQuality = "Good";
                        else if (quality === "Cần xem lại") displayQuality = "Fair";
                        else if (quality === "Kém") displayQuality = "Poor";

                        qualityBadge = "<span class='irt-quality-badge " + qualityClass + "' " +
                                      "data-bs-toggle='tooltip' " +
                                      "data-bs-html='true' " +
                                      "data-bs-placement='left' " +
                                      "title=\"" + tooltipContent.replace(/"/g, '&quot;') + "\">" +
                                      qualityIcon + " " + displayQuality +
                                      "</span>";
                    }

                    // ===== BUILD TABLE ROW =====
                    zContent += `<tr>`;
                    zContent += `<td><div><strong>${i + 1}</strong></div></td>`;
                    zContent += `<td><div onclick='EditRecord("${item.QuestionKey}")'>${item.QuestionText || ''}</div></td>`;
                    zContent += `<td><div><img src='${item.QuestionImage || '/images/icon_Pic.png'}' class='centered-image' /></div></td>`;
                    zContent += `<td><div>${item.SkillLevel || 0}</div></td>`;
                    zContent += `<td><div>${item.AmountAccess || 0}</div></td>`;
                    zContent += `<td><div class='${correctRateClass}'>${correctRateText}</div></td>`;
                    zContent += `<td><div>${anomaly}</div></td>`;
                    zContent += `<td><div>${qualityBadge}</div></td>`; // ✅ IRT COLUMN
                    zContent += `<td><div>${item.Ranking || 0}</div></td>`;
                    zContent += `<td><div><button type='button' class='btn btn-answer' onclick='btnAnswer_Click("${item.QuestionKey}")'>View</button></div></td>`;
                    zContent += "</tr>";
                }
            }

            $("#LV_DataBody").html(zContent);

            // ✅ Initialize Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    html: true,
                    trigger: 'hover focus'
                });
            });
        }

        function EditRecord(QuestionKey) {
            savePageState();
            const zUrl = "/TOEICPart7/Question?Key=" + QuestionKey + "&source=QuestionSubList";
            window.location = zUrl;
        }

        function btnAnswer_Click(QuestionKey) {
            savePageState();
            const zUrl = "/TOEICPart7/AnswerList?Key=" + QuestionKey;
            window.location = zUrl;
        }

        function AddRecord_Click() {
            savePageState();
            const zQuestionKey = $("#QuestionKey").text().trim();
            const zUrl = "/TOEICPart7/Question?ParentKey=" + zQuestionKey + "&source=QuestionSubList";
            window.location = zUrl;
        }
    </script>
