@section Scripts {
    <script>
        let _DataView;
        let _PageSize = 10;
        let _PageNumber = 1;
        let _TotalItems = 0;
        let _SearchTimeout;

        $(document).ready(function () {
            restorePageState();

            $('#txtSearch, #txtLevel, #txtFromDate, #txtToDate, #statusFilter').on('input change', function() {
                clearTimeout(_SearchTimeout);
                _SearchTimeout = setTimeout(function() {
                    _PageNumber = 1;
                    LV_LoadData_Ajax();
                }, 400);
            });

            $('.table-wrapper').on('scroll', function() {
                if (sessionStorage.getItem('questionListState')) {
                    const state = JSON.parse(sessionStorage.getItem('questionListState'));
                    state.tableScrollPosition = $('.table-wrapper').scrollTop();
                    sessionStorage.setItem('questionListState', JSON.stringify(state));
                }
            });

            $(window).on('scroll', function() {
                if (sessionStorage.getItem('questionListState')) {
                    const state = JSON.parse(sessionStorage.getItem('questionListState'));
                    state.pageScrollPosition = $(window).scrollTop();
                    sessionStorage.setItem('questionListState', JSON.stringify(state));
                }
            });
        });

        function savePageState() {
            const state = {
                pageNumber: _PageNumber,
                search: $('#txtSearch').val(),
                level: $('#txtLevel').val(),
                fromDate: $('#txtFromDate').val(),
                toDate: $('#txtToDate').val(),
                statusFilter: $('#statusFilter').val(),
                tableScrollPosition: $('.table-wrapper').scrollTop(),
                pageScrollPosition: $(window).scrollTop()
            };
            sessionStorage.setItem('questionListState', JSON.stringify(state));
        }

        function restorePageState() {
            const savedState = sessionStorage.getItem('questionListState');
            if (savedState) {
                const state = JSON.parse(savedState);

                $('#txtSearch').val(state.search || '');
                $('#txtLevel').val(state.level || '');
                $('#txtFromDate').val(state.fromDate || '');
                $('#txtToDate').val(state.toDate || '');
                $('#statusFilter').val(state.statusFilter || 'Using');

                _PageNumber = state.pageNumber || 1;

                LV_LoadData_Ajax(function() {
                    if (state.tableScrollPosition) {
                        setTimeout(function() {
                            $('.table-wrapper').scrollTop(state.tableScrollPosition);
                        }, 100);
                    }

                    if (state.pageScrollPosition) {
                        setTimeout(function() {
                            $('html, body').scrollTop(state.pageScrollPosition);
                        }, 150);
                    }
                });
            } else {
                LV_LoadData_Ajax();
            }
        }

        function clearPageState() {
            sessionStorage.removeItem('questionListState');
        }

                  function UpdateStatisticsWithOption(option) {
            if (option === 1) {
                console.log('Update statistics cancelled');
                return;
            }

            let btn = document.querySelector(".btn-update-stats");
            let confirmMessage = "";
            let actionType = "";

            if (option === 2) {
                confirmMessage = "📊 Update CorrectRate & Anomaly?\n\n" +
                                "• Difficulty (CorrectRate)\n" +
                                "• Anomaly Detection\n\n" +
                                "⏱️ Estimated time: 30 seconds";
                actionType = "basic";
            } else if (option === 3) {
                confirmMessage = "🧠 Update ALL (CorrectRate + Anomaly + Full IRT)?\n\n" +
                                "• Difficulty (CorrectRate)\n" +
                                "• Anomaly Detection\n" +
                                "• Full IRT Analysis (3PL Model):\n" +
                                "  - Difficulty (b)\n" +
                                "  - Discrimination (a)\n" +
                                "  - Guessing (c)\n" +
                                "  - IRT Ability (θ)\n\n" +
                                "⏱️ Estimated time: 2-3 minutes\n" +
                                "⚠️ Make sure Python service is running!";
                actionType = "full";
            }

            showConfirmModal(
                confirmMessage,
                function() {
                    btn.classList.add("loading");
                    btn.disabled = true;

                    if (actionType === "basic") {
                        // Basic update (no overlay needed - fast)
                        $.ajax({
                            type: 'POST',
                            url: "/TOEICPart1/QuestionList?handler=UpdateStatistics",
                            contentType: "application/json",
                            dataType: "json"
                        })
                        .done(function (data) {
                            if (data.status === "OK") {
                                showAlertModal(data.message, "success", "✅ Success!");
                            } else {
                                showAlertModal("Error: " + data.message, "error", "❌ Error!");
                            }
                            _PageNumber = 1;
                            LV_LoadData_Ajax();
                        })
                        .fail(function (error) {
                            showAlertModal("Error: " + error.responseText, "error", "❌ Error!");
                        })
                        .always(function () {
                            btn.classList.remove("loading");
                            btn.disabled = false;
                        });

                    } else if (actionType === "full") {
                        // ✅ SHOW OVERLAY FOR FULL IRT
                        showIrtLoadingOverlay();

                        // Step 1: CorrectRate & Anomaly
                        updateIrtStep(1, 'active');
                        updateIrtProgress(10);

                        $.ajax({
                            type: 'POST',
                            url: "/TOEICPart1/QuestionList?handler=UpdateStatistics",
                            contentType: "application/json",
                            dataType: "json"
                        })
                        .done(function (data) {
                            if (data.status === "OK") {
                                console.log('✅ Step 1/2: CorrectRate & Anomaly updated');
                                updateIrtStep(1, 'completed');
                                updateIrtProgress(25);

                                // Step 2: Fetch data
                                setTimeout(() => {
                                    updateIrtStep(2, 'active');
                                    updateIrtProgress(35);
                                }, 500);

                                // Step 3: IRT Training
                                setTimeout(() => {
                                    updateIrtStep(2, 'completed');
                                    updateIrtStep(3, 'active');
                                    updateIrtProgress(50);
                                }, 2000);

                                $.ajax({
                                    type: 'POST',
                                    url: "/TOEICPart1/QuestionList?handler=UpdateFullIrt",
                                    contentType: "application/json",
                                    dataType: "json"
                                })
                                .done(function (irtData) {
                                    if (irtData.status === "OK") {
                                        console.log('✅ Step 2/2: Full IRT completed');
                                        updateIrtStep(3, 'completed');
                                        updateIrtProgress(80);

                                        // Step 4: Update DB
                                        setTimeout(() => {
                                            updateIrtStep(4, 'active');
                                            updateIrtProgress(90);
                                        }, 500);

                                        setTimeout(() => {
                                            updateIrtStep(4, 'completed');
                                            updateIrtProgress(100);

                                            // Hide overlay after 1s
                                            setTimeout(() => {
                                                hideIrtLoadingOverlay();
                                                showAlertModal(
                                                    "✅ ALL Updates Successful!\n\n" +
                                                    "📊 CorrectRate & Anomaly: OK\n" +
                                                    "🧠 Full IRT Analysis: OK\n\n" +
                                                    irtData.message,
                                                    "success",
                                                    "🎉 Complete!"
                                                );
                                                _PageNumber = 1;
                                                LV_LoadData_Ajax();
                                            }, 1000);
                                        }, 1500);
                                    } else {
                                        hideIrtLoadingOverlay();
                                        showAlertModal(
                                            "⚠️ CorrectRate & Anomaly: OK\n" +
                                            "❌ Full IRT: FAILED\n\n" +
                                            irtData.message,
                                            "warning",
                                            "⚠️ Partially Successful"
                                        );
                                    }
                                })
                                .fail(function (xhr, status, error) {
                                    hideIrtLoadingOverlay();
                                    showAlertModal(
                                        "⚠️ CorrectRate & Anomaly: OK\n" +
                                        "❌ Full IRT: CONNECTION ERROR\n\n" +
                                        (xhr.responseText || error),
                                        "warning",
                                        "⚠️ Python service not connected"
                                    );
                                })
                                .always(function () {
                                    btn.classList.remove("loading");
                                    btn.disabled = false;
                                });

                            } else {
                                hideIrtLoadingOverlay();
                                showAlertModal("❌ Step 1 failed: " + data.message, "error", "❌ Error!");
                                btn.classList.remove("loading");
                                btn.disabled = false;
                            }
                        })
                        .fail(function (error) {
                            hideIrtLoadingOverlay();
                            showAlertModal("Error: " + error.responseText, "error", "❌ Error!");
                            btn.classList.remove("loading");
                            btn.disabled = false;
                        });
                    }
                },
                actionType === "basic" ? '📊 Update Statistics' : '🧠 Update All'
            );
        }

        // ✅ HELPER FUNCTIONS FOR IRT OVERLAY
        function showIrtLoadingOverlay() {
            $('#irtLoadingOverlay').css('display', 'flex');
            // Reset all steps
            $('.progress-step').removeClass('active completed');
            $('#irtProgressFill').css('width', '0%');
        }

        function hideIrtLoadingOverlay() {
            $('#irtLoadingOverlay').fadeOut(300);
        }

        function updateIrtStep(stepNumber, status) {
            const step = $('#step' + stepNumber);
            step.removeClass('active completed');
            if (status === 'active') {
                step.addClass('active');
            } else if (status === 'completed') {
                step.addClass('completed');
                step.find('.step-icon').html('✅');
            }
        }

        function updateIrtProgress(percentage) {
            $('#irtProgressFill').css('width', percentage + '%');
        }

        function LV_LoadData_Ajax(callback) {
            $("#LV_Waiting").css("display", "");
            var zSearch = $("#txtSearch").val();
            var zFromDate = $('#txtFromDate').val();
            var zToDate = $('#txtToDate').val();
            var zLevel = $('#txtLevel').val();
            var zStatusFilter = $('#statusFilter').val();
            if (zLevel.length == 0)
                zLevel = 0;

            var zDataRequest = {
                "Search": zSearch,
                "Level": zLevel,
                "fromDate": zFromDate,
                "toDate": zToDate,
                "pageSize": _PageSize,
                "pageNumber": _PageNumber,
                "StatusFilter": zStatusFilter
            };

            $.ajax({
                type: 'POST',
                url: "/TOEICPart1/QuestionList?handler=LoadData",
                data: JSON.stringify(zDataRequest),
                contentType: "application/json",
                dataType: "json",
            })
            .done(function (dataResponse) {
                _DataView = dataResponse.data || dataResponse;
                _TotalItems = dataResponse.totalCount || _DataView.length;

                LV_DisplayData();
                renderPagination();

                $("#LV_Waiting").css("display", "none");
                $("#Info_View").html("<i class='fas fa-info-circle me-2'></i>Total: " + _TotalItems + " questions");

                if (typeof callback === 'function') {
                    callback();
                }
            })
            .fail(function (error) {
                showAlertModal('Error: ' + error.responseText, 'error');
                $("#LV_Waiting").css("display", "none");
            });
        }

        function LV_DisplayData() {
            var zContent = "";
            var n = _DataView ? _DataView.length : 0;
            var zNo = 1 + (_PageNumber - 1) * _PageSize;

            for (i = 0; i < n; i++) {
                var item = _DataView[i];
                var isPublished = item.Publish && item.RecordStatus !== 99;

                var correctRate = item.CorrectRate !== null ? item.CorrectRate : null;
                var correctRateText = correctRate !== null ? correctRate.toFixed(2) + "%" : "N/A";
                var correctRateClass = "";
                if (correctRate !== null) {
                    if (correctRate >= 70) correctRateClass = "correct-rate-high";
                    else if (correctRate <= 30) correctRateClass = "correct-rate-low";
                    else correctRateClass = "correct-rate-medium";
                }

                var anomaly = item.Anomaly !== null ? item.Anomaly : "N/A";

                var quality = item.Quality || "";
                var irtDiff = item.IrtDifficulty;
                var irtDisc = item.IrtDiscrimination;
                var irtGuess = item.IrtGuessing;
                var confidence = item.ConfidenceLevel || "";
                var lastAnalyzed = item.LastAnalyzed || "";

                var qualityBadge = "";
                var tooltipContent = "";

                if (quality === "" || quality === "N/A" || !irtDiff || !irtDisc || !irtGuess) {
                    qualityBadge = "<span class='irt-quality-badge irt-quality-na'>N/A</span>";
                } else {
                    var reasons = [];
                    var diffText = "";
                    var diffClass = "";
                    var discText = "";
                    var guessText = "";
                    var reliableIcon = "";
                    var reliableText = "";

                    if (irtDiff < -1) {
                        diffText = "Very Easy (< -1.0)";
                        diffClass = "🟢";
                    } else if (irtDiff < 0) {
                        diffText = "Easy (-1.0 to 0)";
                        diffClass = "🟢";
                    } else if (irtDiff < 1) {
                        diffText = "Medium (0 to 1.0)";
                        diffClass = "🟡";
                    } else if (irtDiff < 2) {
                        diffText = "Hard (1.0 to 2.0)";
                        diffClass = "🔴";
                    } else {
                        diffText = "Very Hard (> 2.0)";
                        diffClass = "🔴";
                        if (irtDiff > 2.5) reasons.push("Difficulty too extreme (> 2.5)");
                    }

                    if (irtDisc < 0.5) {
                        discText = "Poor (< 0.5) - Cannot differentiate students";
                        reasons.push("Low discrimination (< 0.5)");
                    } else if (irtDisc < 1.0) {
                        discText = "Fair (0.5-1.0)";
                    } else {
                        discText = "Good (≥ 1.0) - Differentiates well";
                    }

                    if (irtGuess < 0.2) {
                        guessText = "Good (< 0.2) - Hard to guess";
                    } else if (irtGuess < 0.3) {
                        guessText = "Fair (0.2-0.3)";
                    } else {
                        guessText = "Poor (≥ 0.3) - Easy to guess";
                        if (irtGuess > 0.4) reasons.push("High guessing probability (> 0.4)");
                    }

                    if (confidence === "High") {
                        reliableIcon = "🟢";
                        reliableText = "High (≥ 100 responses)";
                    } else if (confidence === "Medium") {
                        reliableIcon = "🟡";
                        reliableText = "Medium (30-99 responses)";
                    } else if (confidence === "Low") {
                        reliableIcon = "🔴";
                        reliableText = "Low (< 30 responses)";
                        reasons.push("Insufficient data (< 30 responses)");
                    } else {
                        reliableIcon = "⚪";
                        reliableText = "Unknown";
                    }

                    tooltipContent = "<div style='font-size: 0.9rem; line-height: 1.6;'>";
                    tooltipContent += "<strong style='color: #3498db; font-size: 1rem; display: block; margin-bottom: 0.5rem;'>IRT Parameters (3PL Model)</strong>";

                    tooltipContent += "<div class='irt-param'>";
                    tooltipContent += "<strong>📊 Difficulty (b):</strong> " + irtDiff.toFixed(2) + "<br>";
                    tooltipContent += "<span style='color: #ecf0f1;'>" + diffClass + " " + diffText + "</span>";
                    tooltipContent += "</div>";

                    tooltipContent += "<div class='irt-param'>";
                    tooltipContent += "<strong>🎯 Discrimination (a):</strong> " + irtDisc.toFixed(2) + "<br>";
                    tooltipContent += "<span style='color: #ecf0f1;'>" + discText + "</span>";
                    tooltipContent += "</div>";

                    tooltipContent += "<div class='irt-param'>";
                    tooltipContent += "<strong>🎲 Guessing (c):</strong> " + irtGuess.toFixed(2) + "<br>";
                    tooltipContent += "<span style='color: #ecf0f1;'>" + guessText + "</span>";
                    tooltipContent += "</div>";

                    tooltipContent += "<div class='irt-param'>";
                    tooltipContent += "<strong>📈 Reliability:</strong> " + reliableIcon + " " + reliableText;
                    tooltipContent += "</div>";

                    if (lastAnalyzed) {
                        tooltipContent += "<div class='irt-param'>";
                        tooltipContent += "<strong>🕒 Last Analyzed:</strong> " + lastAnalyzed;
                        tooltipContent += "</div>";
                    }

                    if (reasons.length > 0) {
                        tooltipContent += "<div style='margin-top: 0.7rem; padding-top: 0.7rem; border-top: 1px solid #34495e;'>";
                        tooltipContent += "<strong style='color: #e74c3c;'>⚠️ Issues Detected:</strong><br>";
                        reasons.forEach(function(reason) {
                            tooltipContent += "<span style='color: #ecf0f1;'>• " + reason + "</span><br>";
                        });
                        tooltipContent += "</div>";
                    }

                    tooltipContent += "</div>";

                    var qualityClass = "";
                    var qualityIcon = "";

                    if (quality === "Good" || quality === "Tốt") {
                        qualityClass = "irt-quality-good";
                        qualityIcon = "✅";
                    } else if (quality === "Fair" || quality === "Cần xem lại") {
                        qualityClass = "irt-quality-fair";
                        qualityIcon = "⚠️";
                    } else if (quality === "Poor" || quality === "Kém") {
                        qualityClass = "irt-quality-poor";
                        qualityIcon = "❌";
                    } else {
                        qualityClass = "irt-quality-na";
                        qualityIcon = "❓";
                    }

                    var displayQuality = quality;
                    if (quality === "Tốt") displayQuality = "Good";
                    else if (quality === "Cần xem lại") displayQuality = "Fair";
                    else if (quality === "Kém") displayQuality = "Poor";

                    qualityBadge = "<span class='irt-quality-badge " + qualityClass + "' " +
                                  "data-bs-toggle='tooltip' " +
                                  "data-bs-html='true' " +
                                  "data-bs-placement='left' " +
                                  "title=\"" + tooltipContent.replace(/"/g, '&quot;') + "\">" +
                                  qualityIcon + " " + displayQuality +
                                  "</span>";
                }

                zContent += "<tr>";
                zContent += "<td>" + zNo + "</td>";
                zContent += "<td onclick='EditRecord(\"" + item.QuestionKey + "\")'>" + (item.QuestionText || "") + "</td>";
                zContent += "<td><audio controls class='audio-player'><source src='" + item.QuestionVoice + "' type='audio/mp3'></audio></td>";
                zContent += "<td><img src='" + item.QuestionImage + "' class='centered-image' /></td>";
                zContent += "<td>" + item.SkillLevel + "</td>";
                zContent += "<td>" + item.AmountAccess + "</td>";
                zContent += "<td class='" + correctRateClass + "'>" + correctRateText + "</td>";
                zContent += "<td>" + anomaly + "</td>";
                zContent += "<td>" + qualityBadge + "</td>";
                zContent += "<td><button type='button' class='btn btn-answer' onclick='btnAnswer_Click(\"" + item.QuestionKey + "\")'>View</button></td>";
                zContent += "<td><button class='btn-toggle-publish " + (isPublished ? "btn-on" : "btn-off") + "' onclick='togglePublish(this, \"" + item.QuestionKey + "\")'>" + (isPublished ? "ON" : "OFF") + "</button></td>";
                zContent += "</tr>";
                zNo++;
            }

            $("#LV_DataBody").html(zContent);

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl, {
                    html: true,
                    trigger: 'hover focus'
                });
            });
        }

        function renderPagination() {
            const totalPages = Math.ceil(_TotalItems / _PageSize);
            const pagination = $('#pagination');
            pagination.empty();

            if (totalPages <= 1) return;

            pagination.append(`
                <li class="page-item ${_PageNumber === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="goToPage(${_PageNumber - 1}); return false;" aria-label="Previous">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `);

            let startPage = Math.max(1, _PageNumber - 2);
            let endPage = Math.min(totalPages, startPage + 4);

            if (endPage - startPage < 4) {
                startPage = Math.max(1, endPage - 4);
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === _PageNumber ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>
                    </li>
                `);
            }

            pagination.append(`
                <li class="page-item ${_PageNumber === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="goToPage(${_PageNumber + 1}); return false;" aria-label="Next">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `);
        }

        function goToPage(page) {
            const totalPages = Math.ceil(_TotalItems / _PageSize);
            if (page >= 1 && page <= totalPages) {
                _PageNumber = page;
                LV_LoadData_Ajax();
                $('.table-wrapper').scrollTop(0);
            }
        }

        function EditRecord(QuestionKey) {
            savePageState();
            window.location = "/TOEICPart1/Question?Key=" + QuestionKey;
        }

        function btnAnswer_Click(QuestionKey) {
            savePageState();
            window.location = "/TOEICPart1/AnswerList?Key=" + QuestionKey;
        }

        function togglePublish(button, questionKey) {
            const isOn = $(button).hasClass('btn-on');
            const newState = !isOn;
            const confirmMessage = newState
                ? "Do you want to turn ON this question?"
                : "Do you want to turn OFF this question?";

            showConfirmModal(
                confirmMessage,
                function() {
                    $.ajax({
                        type: 'POST',
                        url: '/TOEICPart1/QuestionList?handler=TogglePublish',
                        data: JSON.stringify({ questionKey: questionKey, publish: newState }),
                        contentType: 'application/json',
                        dataType: 'json'
                    }).done(data => {
                        if (data.status === 'OK') {
                            if (newState) {
                                $(button).removeClass('btn-off').addClass('btn-on').text('ON');
                                showAlertModal("Question turned ON successfully!", "success");
                            } else {
                                $(button).removeClass('btn-on').addClass('btn-off').text('OFF');
                                showAlertModal("Question turned OFF successfully!", "success");
                            }
                        } else {
                            showAlertModal("Error: " + data.message, "error");
                        }
                    }).fail(error => {
                        showAlertModal("Error: " + error.responseText, "error");
                    });
                },
                'Change Status'
            );
        }

        function showConfirmModal(message, onConfirm, title = 'Confirm Action') {
            $('#confirmModalLabel').html(`<i class="fas fa-exclamation-triangle me-2"></i>${title}`);
            $('#confirmModalBody').text(message);

            const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
            $('#confirmModalBtn').off('click');
            $('#confirmModalBtn').on('click', function() {
                confirmModal.hide();
                if (typeof onConfirm === 'function') {
                    onConfirm();
                }
            });

            confirmModal.show();
        }

        function showAlertModal(message, type = 'success', title = null) {
            const alertModal = new bootstrap.Modal(document.getElementById('alertModal'));
            const header = $('#alertModalHeader');
            const titleElement = $('#alertModalLabel');

            header.removeClass('bg-success bg-danger bg-warning text-white');

            let icon = 'fa-info-circle';
            let defaultTitle = 'Notification';
            let headerClass = 'bg-primary text-white';

            if (type === 'success') {
                icon = 'fa-check-circle';
                defaultTitle = 'Success';
                headerClass = 'bg-success text-white';
            } else if (type === 'error' || type === 'danger') {
                icon = 'fa-times-circle';
                defaultTitle = 'Error';
                headerClass = 'bg-danger text-white';
            } else if (type === 'warning') {
                icon = 'fa-exclamation-triangle';
                defaultTitle = 'Warning';
                headerClass = 'bg-warning text-white';
            }

            header.addClass(headerClass);
            titleElement.html(`<i class="fas ${icon} me-2"></i>${title || defaultTitle}`);
            $('#alertModalBody').text(message);

            alertModal.show();
        }
    </script>
}