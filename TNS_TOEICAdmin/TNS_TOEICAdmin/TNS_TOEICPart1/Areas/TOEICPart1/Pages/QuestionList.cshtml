@section Scripts {
    <script>
        let _DataView;
        let _PageSize = 10;
        let _PageNumber = 1;
        let _TotalItems = 0;
        let _SearchTimeout;

             $(document).ready(function () {
            // Restore state if exists, otherwise use default
            restorePageState();

            // Auto-search with debounce (400ms)
            $('#txtSearch, #txtLevel, #txtFromDate, #txtToDate, #statusFilter').on('input change', function() {
                clearTimeout(_SearchTimeout);
                _SearchTimeout = setTimeout(function() {
                    _PageNumber = 1;
                    LV_LoadData_Ajax();
                }, 400);
            });

            // ✅ THÊM: Save scroll position when user scrolls
            $('.table-wrapper').on('scroll', function() {
                if (sessionStorage.getItem('questionListState')) {
                    const state = JSON.parse(sessionStorage.getItem('questionListState'));
                    state.scrollPosition = $('.table-wrapper').scrollTop();
                    sessionStorage.setItem('questionListState', JSON.stringify(state));
                }
            });
        });
          function savePageState() {
            const state = {
                pageNumber: _PageNumber,
                search: $('#txtSearch').val(),
                level: $('#txtLevel').val(),
                fromDate: $('#txtFromDate').val(),
                toDate: $('#txtToDate').val(),
                statusFilter: $('#statusFilter').val(),
                scrollPosition: $('.table-wrapper').scrollTop()
            };
            sessionStorage.setItem('questionListState', JSON.stringify(state));
        }

        function restorePageState() {
            const savedState = sessionStorage.getItem('questionListState');
            if (savedState) {
                const state = JSON.parse(savedState);

                // Restore form values
                $('#txtSearch').val(state.search || '');
                $('#txtLevel').val(state.level || '');
                $('#txtFromDate').val(state.fromDate || '');
                $('#txtToDate').val(state.toDate || '');
                $('#statusFilter').val(state.statusFilter || 'Using');

                // Restore page number
                _PageNumber = state.pageNumber || 1;

                // Load data with restored state
                LV_LoadData_Ajax(function() {
                    // Restore scroll position after data loaded
                    if (state.scrollPosition) {
                        setTimeout(function() {
                            $('.table-wrapper').scrollTop(state.scrollPosition);
                        }, 100);
                    }
                });
            } else {
                LV_LoadData_Ajax();
            }
        }

        function clearPageState() {
            sessionStorage.removeItem('questionListState');
        }
                  function UpdateStatistics() {
            let btn = document.querySelector(".btn-refresh");

            showConfirmModal(
                "Are you sure you want to update statistics for all questions? This may take a few moments.",
                function() {
                    btn.classList.add("loading");
                    btn.disabled = true;

                    $.ajax({
                        type: 'POST',
                        url: "/TOEICPart1/QuestionList?handler=UpdateStatistics",
                        contentType: "application/json",
                        dataType: "json"
                    })
                    .done(function (data) {
                        if (data.status === "OK") {
                            showAlertModal("Statistics updated successfully!", "success");
                        } else {
                            showAlertModal("Error: " + data.message, "error");
                        }
                        _PageNumber = 1;
                        LV_LoadData_Ajax();
                    })
                    .fail(function (error) {
                        showAlertModal("Error: " + error.responseText, "error");
                    })
                    .always(function () {
                        btn.classList.remove("loading");
                        btn.disabled = false;
                    });
                },
                'Update Statistics'
            );
        }

               function LV_LoadData_Ajax(callback) {
            $("#LV_Waiting").css("display", "");
            var zSearch = $("#txtSearch").val();
            var zFromDate = $('#txtFromDate').val();
            var zToDate = $('#txtToDate').val();
            var zLevel = $('#txtLevel').val();
            var zStatusFilter = $('#statusFilter').val();
            if (zLevel.length == 0)
                zLevel = 0;

            var zDataRequest = {
                "Search": zSearch,
                "Level": zLevel,
                "fromDate": zFromDate,
                "toDate": zToDate,
                "pageSize": _PageSize,
                "pageNumber": _PageNumber,
                "StatusFilter": zStatusFilter
            };

            $.ajax({
                type: 'POST',
                url: "/TOEICPart1/QuestionList?handler=LoadData",
                data: JSON.stringify(zDataRequest),
                contentType: "application/json",
                dataType: "json",
            })
            .done(function (dataResponse) {
                _DataView = dataResponse.data || dataResponse;
                _TotalItems = dataResponse.totalCount || _DataView.length;

                LV_DisplayData();
                renderPagination();

                $("#LV_Waiting").css("display", "none");
                $("#Info_View").html("<i class='fas fa-info-circle me-2'></i>Total: " + _TotalItems + " questions");

                // ✅ THÊM: Execute callback if provided
                if (typeof callback === 'function') {
                    callback();
                }
            })
            .fail(function (error) {
                showAlertModal('Error: ' + error.responseText, 'error');
                $("#LV_Waiting").css("display", "none");
            });
        }

        function LV_DisplayData() {
            var zContent = "";
            var n = _DataView ? _DataView.length : 0;
            var zNo = 1 + (_PageNumber - 1) * _PageSize;

            for (i = 0; i < n; i++) {
                var isPublished = _DataView[i].Publish && _DataView[i].RecordStatus !== 99;
                var correctRate = _DataView[i].CorrectRate !== null ? _DataView[i].CorrectRate : null;
                var correctRateText = correctRate !== null ? correctRate.toFixed(2) + "%" : "N/A";
                var correctRateClass = "";
                
                // Color coding for Correct Rate
                if (correctRate !== null) {
                    if (correctRate >= 70) {
                        correctRateClass = "correct-rate-high";
                    } else if (correctRate <= 30) {
                        correctRateClass = "correct-rate-low";
                    } else {
                        correctRateClass = "correct-rate-medium";
                    }
                }

                var anomaly = _DataView[i].Anomaly !== null ? _DataView[i].Anomaly : "N/A";

                zContent += "<tr>";
                zContent += "<td>" + zNo + "</td>";
        zContent += "<td onclick='EditRecord(\"" + _DataView[i].QuestionKey + "\")'>" + (_DataView[i].QuestionText || "") + "</td>";
                zContent += "<td><audio controls class='audio-player'><source src='" + _DataView[i].QuestionVoice + "' type='audio/mp3'></audio></td>";
                zContent += "<td><img src='" + _DataView[i].QuestionImage + "' class='centered-image' /></td>";
                zContent += "<td>" + _DataView[i].SkillLevel + "</td>";
                zContent += "<td>" + _DataView[i].AmountAccess + "</td>";
                zContent += "<td class='" + correctRateClass + "'>" + correctRateText + "</td>";
                zContent += "<td>" + anomaly + "</td>";
                zContent += "<td><button type='button' class='btn btn-answer' onclick='btnAnswer_Click(\"" + _DataView[i].QuestionKey + "\")'>View</button></td>";
                zContent += "<td><button class='btn-toggle-publish " + (isPublished ? "btn-on" : "btn-off") + "' onclick='togglePublish(this, \"" + _DataView[i].QuestionKey + "\")'>" + (isPublished ? "ON" : "OFF") + "</button></td>";
                zContent += "</tr>";
                zNo++;
            }
            
            $("#LV_DataBody").html(zContent);
        }

        function renderPagination() {
            const totalPages = Math.ceil(_TotalItems / _PageSize);
            const pagination = $('#pagination');
            pagination.empty();

            if (totalPages <= 1) return;

            // Previous button
            pagination.append(`
                <li class="page-item ${_PageNumber === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="goToPage(${_PageNumber - 1}); return false;" aria-label="Previous">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `);

            // Page numbers (show max 5 pages)
            let startPage = Math.max(1, _PageNumber - 2);
            let endPage = Math.min(totalPages, startPage + 4);

            if (endPage - startPage < 4) {
                startPage = Math.max(1, endPage - 4);
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === _PageNumber ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="goToPage(${i}); return false;">${i}</a>
                    </li>
                `);
            }

            // Next button
            pagination.append(`
                <li class="page-item ${_PageNumber === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="goToPage(${_PageNumber + 1}); return false;" aria-label="Next">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `);
        }

        function goToPage(page) {
            const totalPages = Math.ceil(_TotalItems / _PageSize);
            if (page >= 1 && page <= totalPages) {
                _PageNumber = page;
                LV_LoadData_Ajax();
                // Scroll to top of table
                $('.table-wrapper').scrollTop(0);
            }
        }

