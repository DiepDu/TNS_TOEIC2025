        box-shadow: var(--shadow-sm);
    }

    .btn-answer:hover {
        background: linear-gradient(135deg, #e67e22 0%, #d35400 100%);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-toggle-publish {
        padding: 0.45rem 0.9rem;
        border: none;
        border-radius: var(--radius-sm);
