@page
@model IndexModel
@{
    ViewData["Title"] = "TOEIC Excellence Platform";
    Layout = "_Layout";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* ✅ CRITICAL FIX - Isolate trang Index */
        .index-wrapper {
            position: relative;
            isolation: isolate; /* ✅ Tạo stacking context riêng */
            z-index: 1;
        }

        .hero-section {
            position: relative;
            min-height: calc(100vh - 70px);
            background: linear-gradient(135deg, #0F2027 0%, #203A43 50%, #2C5364 100%);
            display: flex;
            align-items: center;
            overflow: hidden;
            padding: 4rem 2rem; /* ✅ XÓA MARGIN ÂM */
            border-radius: 0 0 50px 50px; /* ✅ Bo tròn 2 góc dưới */
            border-radius: 50px 50px 0 0;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: radial-gradient(circle at 20% 50%, rgba(25, 118, 210, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(0, 137, 123, 0.1) 0%, transparent 50%), radial-gradient(circle at 40% 20%, rgba(255, 179, 0, 0.05) 0%, transparent 50%);
                animation: float 20s ease-in-out infinite;
            }

            .hero-section::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 200px;
                background: linear-gradient(180deg, transparent 0%, #FFFFFF 100%);
                z-index: 1;
            }

        .hero-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }

        .shape {
            position: absolute;
            opacity: 0.1;
            animation: float-shapes 15s ease-in-out infinite;
        }

        .shape-1 {
            top: 10%;
            left: 10%;
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #1976D2, #00897B);
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }

        .shape-2 {
            top: 60%;
            right: 15%;
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #FFB300, #FF6B35);
            border-radius: 50%;
            animation-delay: 2s;
        }

        .shape-3 {
            bottom: 20%;
            left: 20%;
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #1A237E, #1976D2);
            border-radius: 20px;
            transform: rotate(45deg);
            animation-delay: 4s;
        }

        @@keyframes float-shapes {
            0%, 100%

        {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-30px) rotate(180deg);
        }

        }

        @@keyframes float {
            0%, 100%

        {
            transform: scale(1) rotate(0deg);
        }

        50% {
            transform: scale(1.1) rotate(5deg);
        }

        }

        .hero-content {
            position: relative;
            z-index: 2;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .hero-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
        }

        .hero-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 179, 0, 0.3);
            color: #FFB300;
            padding: 10px 24px;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 30px;
        }

        .hero-title {
            font-size: 4.5rem;
            font-weight: 800;
            color: #FFFFFF;
            margin-bottom: 25px;
            line-height: 1.1;
            background: linear-gradient(135deg, #FFFFFF 0%, #B2EBF2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-title-highlight {
            display: block;
            background: linear-gradient(135deg, #FFB300, #FF6B35);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 40px;
            line-height: 1.8;
        }

        .hero-cta-group {
            display: flex;
            gap: 20px;
            margin-bottom: 50px;
            flex-wrap: wrap;
        }

        .hero-cta {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            background: linear-gradient(135deg, #FFB300, #FF6B35);
            color: #FFFFFF;
            padding: 18px 40px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s;
            box-shadow: 0 8px 25px rgba(255, 179, 0, 0.4);
        }

            .hero-cta:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 35px rgba(255, 179, 0, 0.6);
            }

        .hero-cta-secondary {
            background: transparent;
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: #FFFFFF;
            box-shadow: none;
        }

        .hero-stats {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 25px 20px;
            text-align: center;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            color: #FFB300;
            display: block;
            margin-bottom: 8px;
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.95rem;
        }

        .hero-visual {
            position: relative;
            width: 100%;
            height: 600px;
        }

        .visual-card {
            position: absolute;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 24px;
            padding: 30px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .visual-card-main {
            width: 380px;
            height: 480px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: float 6s ease-in-out infinite;
        }

        .features-section {
            padding: 100px 0;
            background: #FFFFFF;
        }

        .section-badge {
            display: inline-block;
            background: #E3F2FD;
            color: #1976D2;
            padding: 6px 20px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .section-title {
            font-size: 2.8rem;
            color: #1A237E;
            margin-bottom: 15px;
        }

        .feature-card {
            background: #FFFFFF;
            border-radius: 16px;
            padding: 40px 30px;
            transition: all 0.3s;
            border: 2px solid transparent;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

            .feature-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
                border-color: #1976D2;
            }

        .feature-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #1976D2, #00897B);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            font-size: 2rem;
            color: #FFFFFF;
        }

        @@media (max-width: 992px) {
            .hero-grid

        {
            grid-template-columns: 1fr;
        }

        .hero-visual {
            display: none;
        }

        .hero-title {
            font-size: 3rem;
        }

        }

        @@media (max-width: 768px) {
            .hero-section

        {
            padding: 60px 1rem;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        }
    </style>
}

<!-- ✅ WRAP TOÀN BỘ TRONG INDEX-WRAPPER -->
<div class="index-wrapper">

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>

        <div class="container">
            <div class="hero-content">
                <div class="hero-grid">
                    <!-- Left Content -->
                    <div class="hero-left">
                        <div class="hero-badge">
                            <i class="fas fa-certificate"></i>
                            Certified TOEIC Platform
                        </div>

                        <h1 class="hero-title">
                            Master English
                            <span class="hero-title-highlight">Excellence</span>
                            with TOEIC
                        </h1>

                        <p class="hero-subtitle">
                            Transform your English proficiency with our AI-powered learning platform.
                            Access 500+ practice tests, real-time analytics, and personalized study paths
                            designed by TOEIC experts.
                        </p>

                        <div class="hero-cta-group">
                            <a href="/Test/Ready" class="hero-cta">
                                <i class="fas fa-rocket"></i>
                                Start Free Trial
                            </a>
                            <a href="/Study/Index" class="hero-cta hero-cta-secondary">
                                <i class="fas fa-play-circle"></i>
                                Watch Demo
                            </a>
                        </div>

                        <div class="hero-stats">
                            <div class="stat-card">
                                <span class="stat-number">15K+</span>
                                <span class="stat-label">Active Students</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">98%</span>
                                <span class="stat-label">Success Rate</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">4.9★</span>
                                <span class="stat-label">User Rating</span>
                            </div>
                        </div>
                    </div>

                    <!-- Right Visual -->
                    <div class="hero-right">
                        <div class="hero-visual">
                            <div class="visual-card visual-card-main">
                                <h3>Your Progress</h3>
                                <p>Track your improvement with detailed analytics</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="text-center mb-5">
                <div class="section-badge">Core Features</div>
                <h2 class="section-title">Comprehensive Learning Tools</h2>
            </div>
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <h3>Full-Length Tests</h3>
                        <p>Complete TOEIC simulation tests with authentic format.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-puzzle-piece"></i>
                        </div>
                        <h3>Part Practice</h3>
                        <p>Target specific sections with focused exercises.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3>Performance Analytics</h3>
                        <p>Track progress with detailed score reports.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-history"></i>
                        </div>
                        <h3>History Tracking</h3>
                        <p>Review past performance and monitor progress.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div> <!-- ✅ ĐÓNG INDEX-WRAPPER -->