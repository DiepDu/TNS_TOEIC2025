    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #3498DB;
            --dark-blue: #2C3E50;
            --light-blue: #E5F9FF;
            --yellow-accent: #F1C40F;
            --white-bg: #FFFFFF;
            --gray-text: #7F8C8D;
            --shadow-light: rgba(0, 0, 0, 0.05);
            --shadow-dark: rgba(0, 0, 0, 0.15);
            --transition: all 0.3s ease;
            --font-poppins: 'Poppins', sans-serif;
            --font-roboto: 'Roboto', sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
            font-size: 16px;
        }

        body {
            font-family: var(--font-poppins);
            background: var(--light-blue);
            color: var(--dark-blue);
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            height: 90vh;
            background: url('https://images.unsplash.com/photo-1503676260728-8f5487bff3a8?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(0, 0, 128, 0.6), rgba(52, 152, 219, 0.4));
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            padding: 0 20px;
        }

        .hero-content h1 {
            font-size: 4.5rem;
            font-weight: 700;
            color: var(--white-bg);
            margin-bottom: 1.5rem;
            letter-spacing: 1px;
            text-shadow: 0 3px 6px var(--shadow-dark);
        }

        .hero-content p {
            font-size: 1.8rem;
            font-weight: 300;
            color: var(--white-bg);
            margin-bottom: 2rem;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-content .btn-cta {
            background: linear-gradient(45deg, var(--primary-blue), #5DADE2);
            color: var(--white-bg);
            font-size: 1.3rem;
            font-weight: 600;
            padding: 15px 40px;
            border-radius: 50px;
            text-decoration: none;
            transition: var(--transition);
        }

        .hero-content .btn-cta:hover {
            background: linear-gradient(45deg, #2980B9, #4D97C8);
            transform: translateY(-3px);
            box-shadow: 0 6px 12px var(--shadow-dark);
        }

        /* Features Section */
        .features-section {
            padding: 80px 0;
            background: var(--white-bg);
        }

        .section-title {
            font-size: 2.8rem;
            font-weight: 700;
            color: var(--dark-blue);
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .section-subtitle {
            font-size: 1.2rem;
            color: var(--gray-text);
            text-align: center;
            max-width: 700px;
            margin: 0 auto 3rem;
        }

        .feature-card {
            background: var(--light-blue);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            transition: var(--transition);
            box-shadow: 0 4px 12px var(--shadow-light);
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 24px var(--shadow-dark);
        }

        .feature-card i {
            font-size: 3.5rem;
            color: var(--primary-blue);
            margin-bottom: 1.5rem;
        }

        .feature-card h3 {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--dark-blue);
            margin-bottom: 1rem;
        }

        .feature-card p {
            font-size: 1rem;
            color: var(--gray-text);
            font-family: var(--font-roboto);
        }

        /* Why TOEIC Section */
        .why-toeic-section {
            padding: 80px 0;
            background: linear-gradient(135deg, #F9FBFF, #E5F9FF);
        }

        .why-toeic-card {
            background: var(--white-bg);
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 4px 12px var(--shadow-light);
            transition: var(--transition);
        }

        .why-toeic-card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 18px var(--shadow-dark);
        }

        .why-toeic-card i {
            font-size: 2.5rem;
            color: var(--yellow-accent);
            margin-bottom: 1rem;
        }

        .why-toeic-card h4 {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark-blue);
            margin-bottom: 0.8rem;
        }

        .why-toeic-card p {
            font-size: 0.95rem;
            color: var(--gray-text);
        }

        /* Testimonials Section */
        .testimonials-section {
            padding: 80px 0;
            background: var(--white-bg);
        }

        .testimonial-card {
            background: var(--light-blue);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            box-shadow: 0 4px 12px var(--shadow-light);
            transition: var(--transition);
        }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 18px var(--shadow-dark);
        }

        .testimonial-card img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 1rem;
            object-fit: cover;
        }

        .testimonial-card p {
            font-size: 1.1rem;
            color: var(--dark-blue);
            font-style: italic;
            margin-bottom: 1rem;
        }

        .testimonial-card h5 {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--primary-blue);
        }

        .testimonial-card span {
            font-size: 0.9rem;
            color: var(--gray-text);
        }

        /* CTA Section */
        .cta-section {
            padding: 100px 0;
            background: linear-gradient(135deg, var(--primary-blue), #5DADE2);
            color: var(--white-bg);
            text-align: center;
        }

        .cta-section h2 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .cta-section p {
            font-size: 1.3rem;
            margin-bottom: 2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-section .btn-cta {
            background: var(--yellow-accent);
            color: var(--dark-blue);
            font-size: 1.4rem;
            padding: 15px 50px;
            border-radius: 50px;
            text-decoration: none;
            transition: var(--transition);
        }

        .cta-section .btn-cta:hover {
            background: #E1B10E;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px var(--shadow-dark);
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .hero-content h1 {
                font-size: 4rem;
            }

            .hero-content p {
                font-size: 1.5rem;
            }

            .section-title {
                font-size: 2.6rem;
            }
        }

        @@media (max-width: 992px) {
            .hero-content h1 {
                font-size: 3.5rem;
            }

            .section-title {
                font-size: 2.4rem;
            }
        }

        @@media (max-width: 768px) {
            .hero-section {
                height: 70vh;
            }

            .hero-content h1 {
                font-size: 3rem;
            }

            .hero-content p {
                font-size: 1.2rem;
            }

            .hero-content .btn-cta {
                padding: 12px 30px;
                font-size: 1.1rem;
            }

            .section-title {
                font-size: 2.2rem;
            }

            .section-subtitle {
                font-size: 1rem;
            }

            .feature-card i {
                font-size: 3rem;
            }

            .feature-card h3 {
                font-size: 1.5rem;
            }

            .why-toeic-card h4 {
                font-size: 1.3rem;
            }

            .testimonial-card img {
                width: 60px;
                height: 60px;
            }

            .cta-section h2 {
                font-size: 2.5rem;
            }

            .cta-section p {
                font-size: 1.1rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-content h1 {
                font-size: 2.5rem;
            }

            .hero-content p {
                font-size: 1rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .feature-card {
                padding: 20px;
            }

            .testimonial-card p {
                font-size: 1rem;
            }
        }

