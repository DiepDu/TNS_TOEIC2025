<style>
    .gradient-custom {
        background: linear-gradient(to bottom right, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        border-radius: 1rem;
        height: 100%;
    }

    .mask-custom {
        background: rgba(24, 24, 16, 0.2);
        border-radius: 1rem;
        backdrop-filter: blur(15px);
        border: 2px solid rgba(255, 255, 255, 0.05);
        background-clip: padding-box;
        box-shadow: 10px 10px 10px rgba(46, 54, 54, 0.03);
        padding: 10px;
    }

    .modal-dialog {
        border-radius: 1rem;
        overflow: hidden;
        max-width: 80vw;
        margin: 1rem auto;
    }

    .modal-content {
        border-radius: 1rem !important;
        overflow: hidden;
        height: calc(100vh - 2rem);
    }

    .file-preview {
        max-width: 100px;
        max-height: 100px;
        margin-top: 10px;
        border-radius: 8px;
    }

    .file-preview-container {
        display: none;
        margin-bottom: 10px;
    }

    .input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-container textarea {
        padding-left: 40px;
        padding-right: 40px;
        border-radius: 20px;
        height: 30px;
        line-height: 1.2;
    }

    .input-container .icon-left {
        position: absolute;
        left: 10px;
        cursor: pointer;
        font-size: 1.2rem;
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        -webkit-background-clip: text;
        color: transparent;
        top: 50%;
        transform: translateY(-50%);
    }

    .input-container .icon-right {
        position: absolute;
        right: 10px;
        cursor: pointer;
        font-size: 1.2rem;
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        -webkit-background-clip: text;
        color: transparent;
        top: 50%;
        transform: translateY(-50%);
    }

    .chat-divider {
        border-right: 2px solid rgba(255, 255, 255, 0.5);
    }

    .message-header {
        padding: 0.5rem 1rem !important;
    }

    .message-content {
        padding: 0.5rem 1rem !important;
    }

    .row {
        display: flex;
        height: 100%;
    }

    .col-md-5 {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .conversation-list {
        flex-grow: 1;
        overflow-y: auto;
        padding: 1rem 0.5rem;
        position: relative;
        transition: height 0.6s ease, margin-top 0.6s ease;
        margin-top: 1rem;
    }

    .conversation-list.focused {
        height: calc(100% - 110px);
        margin-top: 0;
    }

    .chat-content {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .message-list-container {
        flex-grow: 1;
        overflow-y: auto;
        padding-right: 0.5rem;
        margin-bottom: 1rem;
        position: relative;
    }

    .input-container-sticky {
        position: sticky;
        bottom: 0;
        background: transparent;
        padding-top: 0.5rem;
        z-index: 10;
    }

    .conversation-list::-webkit-scrollbar,
    .message-list-container::-webkit-scrollbar {
        width: 8px;
    }

    .conversation-list::-webkit-scrollbar-track,
    .message-list-container::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }

    .conversation-list::-webkit-scrollbar-thumb,
    .message-list-container::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        border-radius: 10px;
        transition: background 0.3s ease;
    }

    .conversation-list::-webkit-scrollbar-thumb:hover,
    .message-list-container::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(to bottom, rgba(252, 203, 144, 0.8), rgba(213, 126, 235, 0.8));
    }

    .message-list-container::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 50px;
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), transparent);
        pointer-events: none;
        z-index: 5;
    }

    .message-list .d-flex .mask-custom {
        display: inline-block;
        max-width: fit-content;
    }

    .message-list .justify-content-end .message-content {
        text-align: right;
    }

    .conversation-list li.active {
        background-color: rgba(252, 203, 144, 0.3);
        border-radius: 0.5rem;
        font-weight: bold;
    }

    .search-container {
        position: relative;
        margin-bottom: 0.5rem;
    }

    .search-input {
        width: 100%;
        padding: 0.5rem 2rem 0.5rem 1rem;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.1);
        color: white;
        outline: none;
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .search-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.7);
        cursor: pointer;
    }

    .search-results {
        display: none;
        flex-wrap: nowrap;
        gap: 10px;
        padding: 0.5rem 0;
        max-width: 100%;
        overflow-x: auto;
        min-height: 60px;
    }

    .search-results.show {
        display: flex;
    }

    .search-result-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
    }

    .search-result-item img {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        margin-bottom: 0.25rem;
    }

    .search-result-item p {
        margin: 0;
        font-size: 0.9rem;
        color: white;
        text-align: center;
        max-width: 100px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .no-results {
        color: rgba(255, 255, 255, 0.7);
        text-align: center;
        padding: 0.5rem;
    }

    .chat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .chat-header .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 0.5rem;
    }

    .chat-header .name {
        font-size: 1rem;
        color: white;
        margin: 0;
        cursor: pointer;
    }

    .chat-header .call-icons {
        display: flex;
        gap: 0.5rem;
    }

    .chat-header .call-icons i {
        font-size: 1.5rem;
        color: white;
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        cursor: pointer;
        border-radius: 50%;
        padding: 0.25rem;
    }

    .pinned-section {
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        cursor: pointer;
    }

    .pinned-section p { margin: 0; color: white; }

    .pinned-popup {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        padding: 10px;
        border-radius: 5px;
        z-index: 1000;
        max-height: 80vh;
        overflow-y: auto;
        color: #000;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        display: none;
    }

    .pinned-popup div {
        padding: 5px;
        border-bottom: 1px solid #eee;
    }

    .message {
        display: flex;
        align-items: flex-start;
        margin-bottom: 10px;
    }

    .message.left { margin-right: 20%; }
    .message.right { flex-direction: row-reverse; margin-left: 20%; }

    .avatar { width: 32px; height: 32px; border-radius: 50%; margin: 0 5px; }

    .message-box {
        background: #e0e0e0;
        padding: 5px 10px;
        border-radius: 10px;
        max-width: 60%;
    }

    .message.right .message-box { background: #dcf8c6; }

    .recalled { opacity: 0.5; }

    .name { margin: 0; font-weight: bold; }

    .content { margin: 0; word-break: break-word; }

    .time { font-size: 0.7rem; color: #888; }

    .status { font-size: 0.7rem; }

    .menu-btn { display: none; cursor: pointer; margin-left: 5px; }

    .message:hover .menu-btn { display: block; }

    .reply-box {
        background: rgba(0,0,0,0.1);
        padding: 5px;
        border-radius: 5px;
        margin-bottom: 5px;
    }

    .reply-content { margin: 0; color: #666; }

    .attachment { margin-top: 5px; }

    .attachment a { margin-left: 5px; }

    @@media (max-width: 768px) {
        .message-box { max-width: 80%; }
        .avatar { width: 24px; height: 24px; }
    }
</style>

<div id="chatModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button id="closeChat" type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close"></button>
            <div class="gradient-custom p-4">
                <div class="row">
                    <div class="col-md-5 mb-4 mb-md-0 chat-divider">
                        <div class="search-container">
                            <input type="text" id="searchInput" class="search-input" placeholder="Search...">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                        <div class="search-results" id="searchResults"></div>
                        <div class="mask-custom p-4 rounded conversation-list" id="conversationListContainer">
                            <ul class="list-unstyled" id="conversationList"></ul>
                        </div>
                    </div>
                    <div class="col-md-7 chat-content">
                        <div class="chat-header" id="chatHeader" style="display: none;">
                            <div class="d-flex align-items-center">
                                <img id="headerAvatar" class="avatar" src="" alt="Avatar">
                                <p id="headerName" class="name"></p>
                            </div>
                            <div class="call-icons">
                                <i class="fas fa-phone"></i>
                                <i class="fas fa-video"></i>
                            </div>
                        </div>
                        <div class="pinned-section" id="pinnedSection" style="display: none;"></div>
                        <div class="message-list-container">
                            <ul id="messageList" class="list-unstyled text-white"></ul>
                        </div>
                        <div class="input-container-sticky">
                            <div class="file-preview-container" id="filePreviewContainer">
                                <img id="filePreview" class="file-preview d-none" alt="Preview">
                                <video id="videoPreview" class="file-preview d-none" controls></video>
                                <audio id="audioPreview" class="file-preview d-none" controls></audio>
                                <button id="clearFile" class="btn btn-sm btn-danger ms-2">Clear</button>
                            </div>
                            <div class="input-container">
                                <i id="fileIcon" class="fas fa-paperclip icon-left"></i>
                                <textarea id="chatInput" class="form-control" rows="1" placeholder="Message"></textarea>
                                <i id="sendIcon" class="fas fa-arrow-right icon-right"></i>
                            </div>
                            <input type="file" id="fileInput" accept="image/*,video/*,audio/mpeg" class="d-none">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="pinnedPopup" class="pinned-popup">
        <div id="pinnedContent"></div>
    </div>
</div>