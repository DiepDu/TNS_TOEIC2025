<style>
    .gradient-custom {
        background: linear-gradient(to bottom right, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        border-radius: 1rem;
        height: 100%;
    }

    .mask-custom {
        background: rgba(24, 24, 16, 0.2);
        border-radius: 1rem;
        backdrop-filter: blur(15px);
        border: 2px solid rgba(255, 255, 255, 0.05);
        background-clip: padding-box;
        box-shadow: 10px 10px 10px rgba(46, 54, 54, 0.03);
        padding: 10px; /* Mở rộng phần nền bao quanh tin nhắn */
    }

    .modal-dialog {
        border-radius: 1rem;
        overflow: hidden;
        max-width: 80vw;
        margin: 1rem auto;
    }

    .modal-content {
        border-radius: 1rem !important;
        overflow: hidden;
        height: calc(100vh - 2rem);
    }

    .file-preview {
        max-width: 100px;
        max-height: 100px;
        margin-top: 10px;
        border-radius: 8px;
    }

    .file-preview-container {
        display: none;
        margin-bottom: 10px;
    }

    .input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-container textarea {
            padding-left: 40px;
            padding-right: 40px;
            border-radius: 20px;
            height: 30px;
            line-height: 1.2;
        }

        .input-container .icon-left {
            position: absolute;
            left: 10px;
            cursor: pointer;
            font-size: 1.2rem;
            background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
            -webkit-background-clip: text;
            color: transparent;
            top: 50%;
            transform: translateY(-50%);
        }

        .input-container .icon-right {
            position: absolute;
            right: 10px;
            cursor: pointer;
            font-size: 1.2rem;
            background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
            -webkit-background-clip: text;
            color: transparent;
            top: 50%;
            transform: translateY(-50%);
        }

    .chat-divider {
        border-right: 2px solid rgba(255, 255, 255, 0.5);
    }

    .message-header {
        padding: 0.5rem 1rem !important;
    }

    .message-content {
        padding: 0.5rem 1rem !important;
    }

    .conversation-list {
        max-height: calc(100vh - 6rem - 2rem);
        overflow-y: auto;
        padding: 1rem 0.5rem;
        position: relative;
    }

    .chat-content {
        display: flex;
        flex-direction: column;
        height: calc(100vh - 6rem);
    }

    .message-list-container {
        flex-grow: 1;
        overflow-y: auto;
        padding-right: 0.5rem;
        margin-bottom: 1rem;
        position: relative;
    }

    .input-container-sticky {
        position: sticky;
        bottom: 0;
        background: transparent;
        padding-top: 0.5rem;
        z-index: 10;
    }

    .conversation-list::-webkit-scrollbar,
    .message-list-container::-webkit-scrollbar {
        width: 8px;
    }

    .conversation-list::-webkit-scrollbar-track,
    .message-list-container::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }

    .conversation-list::-webkit-scrollbar-thumb,
    .message-list-container::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), rgba(213, 126, 235, 1));
        border-radius: 10px;
        transition: background 0.3s ease;
    }

        .conversation-list::-webkit-scrollbar-thumb:hover,
        .message-list-container::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to bottom, rgba(252, 203, 144, 0.8), rgba(213, 126, 235, 0.8));
        }

    .message-list-container::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 50px;
        background: linear-gradient(to bottom, rgba(252, 203, 144, 1), transparent);
        pointer-events: none;
        z-index: 5;
    }

    .message-list .d-flex .mask-custom {
        display: inline-block;
        max-width: fit-content;
    }

    .message-list .justify-content-end .message-content {
        text-align: right;
    }
    /* CSS để làm đậm phần hộp thoại đang chọn */
    .conversation-list li.active {
        background-color: rgba(252, 203, 144, 0.3);
        border-radius: 0.5rem;
        font-weight: bold;
    }
</style>
<div id="chatModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button id="closeChat" type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Close"></button>
            <div class="gradient-custom p-4">
                <div class="row">
                    <div class="col-md-5 mb-4 mb-md-0 chat-divider">
                        <h5 class="font-weight-bold mb-3 text-center text-white">Member</h5>
                        <div class="mask-custom p-4 rounded conversation-list">
                            <ul class="list-unstyled" id="conversationList"></ul>
                        </div>
                    </div>
                    <div class="col-md-7 chat-content">
                        <div class="message-list-container">
                            <ul id="messageList" class="list-unstyled text-white"></ul>
                        </div>
                        <div class="input-container-sticky">
                            <div class="file-preview-container" id="filePreviewContainer">
                                <img id="filePreview" class="file-preview d-none" alt="Preview">
                                <video id="videoPreview" class="file-preview d-none" controls></video>
                                <audio id="audioPreview" class="file-preview d-none" controls></audio>
                                <button id="clearFile" class="btn btn-sm btn-danger ms-2">Clear</button>
                            </div>
                            <div class="input-container">
                                <i id="fileIcon" class="fas fa-paperclip icon-left"></i>
                                <textarea id="chatInput" class="form-control" rows="1" placeholder="Message"></textarea>
                                <i id="sendIcon" class="fas fa-arrow-right icon-right"></i>
                            </div>
                            <input type="file" id="fileInput" accept="image/*,video/*,audio/mpeg" class="d-none">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>