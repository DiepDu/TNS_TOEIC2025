@page
@model TNS_EDU_STUDY.Areas.Study.Pages.IndexModel
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* ----- General Design ----- */
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif; /* Adding Poppins font for a better look */
    }

    .study-page-container {
        max-width: 1100px;
        margin: 50px auto;
        padding: 20px;
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ----- Header/Hero Section ----- */
    .study-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .study-title {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(90deg, #00796b, #4db6ac);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 15px;
    }

    .study-description {
        font-size: 1.15rem;
        color: #666;
        max-width: 700px;
        margin: 0 auto;
    }

    /* ----- Skill Groups ----- */
    .skill-group {
        margin-bottom: 50px;
    }

    .skill-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 25px;
        padding-bottom: 10px;
        border-bottom: 3px solid #00796b;
        display: inline-block;
    }

    /* ----- Part Selection Grid ----- */
    .part-selection-grid {
        display: grid;
        gap: 25px;
    }

    /* 4-column grid for Listening group */
    .grid-listening {
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }

    /* 3-column grid for Reading group */
    .grid-reading {
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }

    /* ----- Part Selection Card ----- */
    .part-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 15px;
        padding: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

        .part-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 121, 107, 0.15);
            border-color: #4db6ac;
        }

        .part-card.selected {
            border-color: #00796b;
            background-color: #e8f5e9;
            box-shadow: 0 0 0 3px #81c784, 0 8px 20px rgba(76, 175, 80, 0.2);
            transform: scale(1.05);
        }

    .part-card-icon {
        font-size: 3rem;
        color: #00796b;
        margin-bottom: 15px;
        transition: color 0.3s ease;
    }

    .part-card.selected .part-card-icon {
        color: #388e3c;
    }

    .part-card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    .part-card.selected .part-card-title {
        color: #388e3c;
    }

    .part-card-desc {
        font-size: 0.9rem;
        color: #777;
    }

    /* ----- Start Button ----- */
    .start-button-container {
        text-align: center;
        margin-top: 20px;
    }

    .start-study-btn {
        background: linear-gradient(45deg, #26a69a, #00897b);
        color: white;
        padding: 15px 45px;
        border: none;
        border-radius: 50px;
        font-size: 1.2rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 121, 107, 0.3);
        opacity: 0.5;
        pointer-events: none;
        transform: scale(0.95);
    }

        .start-study-btn.active {
            opacity: 1;
            pointer-events: auto;
            transform: scale(1);
        }

        .start-study-btn:hover.active {
            transform: scale(1.05);
            box-shadow: 0 7px 25px rgba(0, 121, 107, 0.4);
        }

        .start-study-btn i {
            margin-right: 10px;
        }

</style>

<div class="study-page-container">
    <div class="study-header">
        <h1 class="study-title">TOEIC Practice by Part</h1>
        <p class="study-description">Choose a part you want to practice below. The system will create a dedicated test for that part to help you improve your skills.</p>
    </div>

    <form method="post">
        <div class="skill-group">
            <h2 class="skill-title">Listening Comprehension</h2>
            <div class="part-selection-grid grid-listening">
                <div class="part-card" data-part="1" onclick="selectPart(1, this)">
                    <div class="part-card-icon"><i class="fas fa-camera"></i></div>
                    <div class="part-card-title">Part 1</div>
                    <p class="part-card-desc">Photographs</p>
                </div>
                <div class="part-card" data-part="2" onclick="selectPart(2, this)">
                    <div class="part-card-icon"><i class="fas fa-question-circle"></i></div>
                    <div class="part-card-title">Part 2</div>
                    <p class="part-card-desc">Question-Response</p>
                </div>
                <div class="part-card" data-part="3" onclick="selectPart(3, this)">
                    <div class="part-card-icon"><i class="fas fa-comments"></i></div>
                    <div class="part-card-title">Part 3</div>
                    <p class="part-card-desc">Conversations</p>
                </div>
                <div class="part-card" data-part="4" onclick="selectPart(4, this)">
                    <div class="part-card-icon"><i class="fas fa-bullhorn"></i></div>
                    <div class="part-card-title">Part 4</div>
                    <p class="part-card-desc">Talks</p>
                </div>
            </div>
        </div>

        <div class="skill-group">
            <h2 class="skill-title">Reading Comprehension</h2>
            <div class="part-selection-grid grid-reading">
                <div class="part-card" data-part="5" onclick="selectPart(5, this)">
                    <div class="part-card-icon"><i class="fas fa-edit"></i></div>
                    <div class="part-card-title">Part 5</div>
                    <p class="part-card-desc">Incomplete Sentences</p>
                </div>
                <div class="part-card" data-part="6" onclick="selectPart(6, this)">
                    <div class="part-card-icon"><i class="fas fa-file-alt"></i></div>
                    <div class="part-card-title">Part 6</div>
                    <p class="part-card-desc">Text Completion</p>
                </div>
                <div class="part-card" data-part="7" onclick="selectPart(7, this)">
                    <div class="part-card-icon"><i class="fas fa-newspaper"></i></div>
                    <div class="part-card-title">Part 7</div>
                    <p class="part-card-desc">Reading Passages</p>
                </div>
            </div>
        </div>

        <input type="hidden" id="selectedPartInput" name="selectedPart" asp-for="SelectedPart" />

        <div class="start-button-container">
            <button type="submit" class="start-study-btn" id="start-study-btn" disabled>
                <i class="fas fa-play-circle"></i> Start Practice
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // JavaScript logic remains the same
        function selectPart(partNumber, element) {
            document.querySelectorAll('.part-card').forEach(card => {
                card.classList.remove('selected');
            });
            element.classList.add('selected');
            document.getElementById('selectedPartInput').value = partNumber;
            const startButton = document.getElementById('start-study-btn');
            startButton.disabled = false;
            startButton.classList.add('active');
        }
    </script>
}