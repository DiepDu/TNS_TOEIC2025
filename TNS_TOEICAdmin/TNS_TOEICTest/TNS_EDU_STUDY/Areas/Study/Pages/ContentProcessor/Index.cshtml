@page
@model TNS_EDU_STUDY.Areas.Study.Pages.ContentProcessor.IndexModel
@{
    ViewData["Title"] = "Smart Content Processor";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body py-4">
                    <div class="d-flex align-items-center">
                        <div class="icon-box bg-white text-primary rounded-circle p-3 me-3">
                            <i class="fas fa-magic fa-2x"></i>
                        </div>
                        <div>
                            <h2 class="mb-1">Smart Content-to-Practice</h2>
                            <p class="mb-0 opacity-75">Transform any content into TOEIC practice exercises</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Service Status -->
    @if (!Model.IsServiceAvailable)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Content Processor Service unavailable!</strong>
                <br>Please check service running at <code>http://localhost:5004</code>
            </div>
        </div>
    }

    <div class="row">
        <!-- Left Panel: Input Selection -->
        <div class="col-lg-5 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-upload me-2"></i>Step 1: Select Content Source</h5>
                </div>
                <div class="card-body">
                    <!-- Input Type Selection -->
                    <div class="input-type-grid mb-4">
                        <div class="row g-2">
                            <div class="col-6 col-md-4">
                                <div class="input-type-card" data-type="text" onclick="selectInputType('text')">
                                    <div class="icon"><i class="fas fa-keyboard"></i></div>
                                    <div class="label">Text</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="input-type-card" data-type="image" onclick="selectInputType('image')">
                                    <div class="icon"><i class="fas fa-image text-success"></i></div>
                                    <div class="label">Image (OCR)</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="input-type-card" data-type="pdf" onclick="selectInputType('pdf')">
                                    <div class="icon"><i class="fas fa-file-pdf text-danger"></i></div>
                                    <div class="label">PDF</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="input-type-card" data-type="docx" onclick="selectInputType('docx')">
                                    <div class="icon"><i class="fas fa-file-word text-primary"></i></div>
                                    <div class="label">Word</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="input-type-card" data-type="audio" onclick="selectInputType('audio')">
                                    <div class="icon"><i class="fas fa-headphones text-warning"></i></div>
                                    <div class="label">Audio</div>
                                </div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="input-type-card" data-type="video" onclick="selectInputType('video')">
                                    <div class="icon"><i class="fas fa-video text-info"></i></div>
                                    <div class="label">Video</div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-type-card wide" data-type="youtube" onclick="selectInputType('youtube')">
                                    <div class="icon"><i class="fab fa-youtube text-danger"></i></div>
                                    <div class="label">YouTube</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dynamic Input Area -->
                    <div id="inputArea">
                        <!-- Text Input -->
                        <div id="textInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Enter English text:</label>
                            <textarea id="textContent" class="form-control" rows="8"
                                      placeholder="Paste or type English content here...&#10;&#10;Example: A letter, email, article, dialogue..."
                                      maxlength="5000"></textarea>
                            <div class="d-flex justify-content-between mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>Min 50, max 5,000 characters
                                </small>
                                <small id="charCount" class="text-muted">0 / 5,000</small>
                            </div>
                        </div>

                        <!-- Image Input -->
                        <div id="imageInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Upload image with text:</label>
                            <div class="upload-zone" id="imageDropZone" onclick="document.getElementById('imageFile').click()">
                                <i class="fas fa-image fa-3x text-success mb-3"></i>
                                <p class="mb-1">Drag & drop image here</p>
                                <p class="text-muted small">JPG, PNG, BMP, TIFF, WEBP</p>
                                <input type="file" id="imageFile" accept=".jpg,.jpeg,.png,.bmp,.tiff,.tif,.webp" hidden onchange="handleFileSelect(this, 'image')">
                            </div>
                            <div id="imageFileInfo" class="file-info mt-2" style="display: none;"></div>
                            <div id="imagePreviewContainer" class="mt-2 text-center" style="display: none;">
                                <img id="imagePreviewImg" src="" alt="Preview" class="img-fluid rounded" style="max-height: 200px;">
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Max 5MB. OCR extracts text from images.
                            </small>
                        </div>

                        <!-- PDF Input -->
                        <div id="pdfInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Upload PDF file:</label>
                            <div class="upload-zone" id="pdfDropZone" onclick="document.getElementById('pdfFile').click()">
                                <i class="fas fa-file-pdf fa-3x text-danger mb-3"></i>
                                <p class="mb-1">Drag & drop PDF here</p>
                                <p class="text-muted small">or click to select file</p>
                                <input type="file" id="pdfFile" accept=".pdf" hidden onchange="handleFileSelect(this, 'pdf')">
                            </div>
                            <div id="pdfFileInfo" class="file-info mt-2" style="display: none;"></div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Max 5MB, 10 pages
                            </small>
                        </div>

                        <!-- DOCX Input -->
                        <div id="docxInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Upload Word file:</label>
                            <div class="upload-zone" id="docxDropZone" onclick="document.getElementById('docxFile').click()">
                                <i class="fas fa-file-word fa-3x text-primary mb-3"></i>
                                <p class="mb-1">Drag & drop DOCX here</p>
                                <p class="text-muted small">or click to select file</p>
                                <input type="file" id="docxFile" accept=".docx" hidden onchange="handleFileSelect(this, 'docx')">
                            </div>
                            <div id="docxFileInfo" class="file-info mt-2" style="display: none;"></div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Max 5MB
                            </small>
                        </div>

                        <!-- Audio Input -->
                        <div id="audioInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Upload Audio file:</label>
                            <div class="upload-zone" id="audioDropZone" onclick="document.getElementById('audioFile').click()">
                                <i class="fas fa-headphones fa-3x text-warning mb-3"></i>
                                <p class="mb-1">Drag & drop Audio here</p>
                                <p class="text-muted small">MP3, WAV, M4A, OGG, FLAC</p>
                                <input type="file" id="audioFile" accept=".mp3,.wav,.m4a,.ogg,.flac,.webm" hidden onchange="handleFileSelect(this, 'audio')">
                            </div>
                            <div id="audioFileInfo" class="file-info mt-2" style="display: none;"></div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Max 25MB, 5 minutes. <strong>Requires FFmpeg installed.</strong>
                            </small>
                        </div>

                        <!-- Video Input -->
                        <div id="videoInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Upload Video file:</label>
                            <div class="upload-zone" id="videoDropZone" onclick="document.getElementById('videoFile').click()">
                                <i class="fas fa-video fa-3x text-info mb-3"></i>
                                <p class="mb-1">Drag & drop Video here</p>
                                <p class="text-muted small">MP4, MOV, AVI, MKV, WEBM</p>
                                <input type="file" id="videoFile" accept=".mp4,.mov,.avi,.mkv,.webm" hidden onchange="handleFileSelect(this, 'video')">
                            </div>
                            <div id="videoFileInfo" class="file-info mt-2" style="display: none;"></div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Max 50MB, 5 minutes. <strong>Requires FFmpeg installed.</strong>
                            </small>
                        </div>

                        <!-- YouTube Input -->
                        <div id="youtubeInput" class="input-section" style="display: none;">
                            <label class="form-label fw-bold">Enter YouTube URL:</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fab fa-youtube text-danger"></i></span>
                                <input type="url" id="youtubeUrl" class="form-control"
                                       placeholder="https://www.youtube.com/watch?v=...">
                            </div>
                            <div id="youtubePreview" class="mt-3" style="display: none;"></div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>Max 5 minutes. Video must have subtitles/CC enabled.
                            </small>
                        </div>

                        <!-- Placeholder -->
                        <div id="placeholderInput" class="text-center py-5">
                            <i class="fas fa-hand-pointer fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Select content type above to begin</p>
                        </div>
                    </div>

                    <!-- Process Button -->
                    <div class="mt-4">
                        <button id="processBtn" class="btn btn-primary btn-lg w-100" onclick="processInput()" disabled>
                            <i class="fas fa-cog me-2"></i>Process & Preview
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel: Preview -->
        <div class="col-lg-7 mb-4">
            <div class="card h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-eye me-2"></i>Step 2: Preview & Edit</h5>
                    <span id="previewStatus" class="badge bg-secondary">Waiting</span>
                </div>
                <div class="card-body">
                    <!-- Loading State -->
                    <div id="previewLoading" class="text-center py-5" style="display: none;">
                        <div class="spinner-border text-primary mb-3" role="status"></div>
                        <p class="text-muted" id="loadingMessage">Processing content...</p>
                    </div>

                    <!-- Empty State -->
                    <div id="previewEmpty" class="text-center py-5">
                        <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No content yet</h5>
                        <p class="text-muted">Select source and click "Process" to preview</p>
                    </div>

                    <!-- Preview Content -->
                    <div id="previewContent" style="display: none;">
                        <!-- Stats -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-3 col-6">
                                <div class="stat-card">
                                    <div class="stat-icon"><i class="fas fa-font"></i></div>
                                    <div class="stat-value" id="statWords">0</div>
                                    <div class="stat-label">Words</div>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="stat-card">
                                    <div class="stat-icon"><i class="fas fa-text-width"></i></div>
                                    <div class="stat-value" id="statChars">0</div>
                                    <div class="stat-label">Characters</div>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="stat-card">
                                    <div class="stat-icon"><i class="fas fa-language"></i></div>
                                    <div class="stat-value" id="statLanguage">--</div>
                                    <div class="stat-label">Language</div>
                                </div>
                            </div>
                            <div class="col-md-3 col-6">
                                <div class="stat-card" id="statExtraCard">
                                    <div class="stat-icon"><i class="fas fa-tag"></i></div>
                                    <div class="stat-value" id="statExtra">--</div>
                                    <div class="stat-label" id="statExtraLabel">Type</div>
                                </div>
                            </div>
                        </div>

                        <!-- OCR Confidence -->
                        <div id="ocrConfidenceSection" class="mb-3" style="display: none;">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="fw-bold">OCR Accuracy:</small>
                                <small id="ocrConfidenceValue">0%</small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div id="ocrConfidenceBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                        </div>

                        <!-- Errors -->
                        <div id="previewErrors" class="alert alert-danger" style="display: none;">
                            <h6 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>Errors:</h6>
                            <ul id="errorList" class="mb-0"></ul>
                        </div>

                        <!-- Warnings -->
                        <div id="previewWarnings" class="alert alert-warning" style="display: none;">
                            <h6 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Warnings:</h6>
                            <ul id="warningList" class="mb-0"></ul>
                        </div>

                        <!-- Extracted Text -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="form-label fw-bold mb-0">Extracted Content:</label>
                                <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard()">
                                    <i class="fas fa-copy me-1"></i>Copy
                                </button>
                            </div>
                            <textarea id="extractedText" class="form-control" rows="12"
                                      placeholder="Content will appear here..."></textarea>
                            <div class="d-flex justify-content-between mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-edit me-1"></i>You can edit before continuing
                                </small>
                                <small id="editCharCount" class="text-muted">0 / 5,000</small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 mt-4">
                            <button id="confirmBtn" class="btn btn-success flex-grow-1" onclick="confirmAndContinue()" disabled>
                                <i class="fas fa-check me-2"></i>Confirm & Continue
                            </button>
                            <button class="btn btn-outline-secondary" onclick="resetAll()">
                                <i class="fas fa-redo me-2"></i>Reset
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
