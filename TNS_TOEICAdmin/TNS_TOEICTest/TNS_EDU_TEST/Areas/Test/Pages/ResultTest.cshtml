        function showToast(message, type = 'info', duration = 3000) {
    const container = document.getElementById('toast-container');
    if (!container) return;

    const toast = document.createElement('div');
    toast.textContent = message;
    toast.style.minWidth = '200px';
    toast.style.marginTop = '10px';
    toast.style.padding = '10px 20px';
    toast.style.color = '#fff';
    toast.style.borderRadius = '5px';
    toast.style.boxShadow = '0 2px 8px rgba(0,0,0,0.2)';
    toast.style.opacity = '0';
    toast.style.transition = 'opacity 0.5s ease';

    // Màu sắc theo type
    switch(type) {
        case 'success': toast.style.backgroundColor = '#4caf50'; break;  // xanh lá
        case 'error': toast.style.backgroundColor = '#f44336'; break;    // đỏ
        case 'warning': toast.style.backgroundColor = '#ff9800'; break;  // cam
        default: toast.style.backgroundColor = '#2196f3'; // xanh dương
    }

    container.appendChild(toast);

    // Fade in
    requestAnimationFrame(() => {
        toast.style.opacity = '1';
    });

    // Tự ẩn sau duration
    setTimeout(() => {
        toast.style.opacity = '0';
        toast.addEventListener('transitionend', () => toast.remove());
    }, duration);
}
