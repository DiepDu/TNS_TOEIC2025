async function sendReport() {
    const modal = document.getElementById('reportModal');
    const questionKey = modal.dataset.questionKey;
    const feedbackText = document.getElementById('reportText').value.trim();

    if (!questionKey) return showToast('Thiếu QuestionKey.', 'error');
    if (!feedbackText) return showToast('Vui lòng nhập nội dung phản hồi.', 'warning');
    if (feedbackText.length > 500) return showToast('Phản hồi không được quá 500 ký tự.', 'warning');

    const guidPattern = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i;
    if (!guidPattern.test(questionKey)) return showToast('QuestionKey không hợp lệ.', 'error');

    let question = questions.find(q => q.questionKey === questionKey);
    let parentKey = null;
    if (!question) {
        for (const parent of questions) {
            if (parent.children) {
                question = parent.children.find(child => child.questionKey === questionKey);
                if (question) {
                    parentKey = parent.questionKey;
                    break;
                }
            }
        }
    }

    if (!question) return showToast('Không tìm thấy câu hỏi.', 'error');

    const payload = {
        ResultKey: resultKey,
        QuestionKey: questionKey,
        FeedbackText: feedbackText,
        Part: question.part
    };
    if (parentKey) payload.Parent = parentKey;

    try {
        const response = await fetch('/Test/ResultTest?handler=SubmitFeedback', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(payload)
        });

        const data = await response.json();
        if (response.ok && data.success) {
            showToast('Gửi phản hồi thành công!', 'success');
            closeReportModal();

            const notifyPayload = {
                QuestionKey: questionKey,
                Part: question.part,
                Member: '@Model.Member',
                Summary: feedbackText
            };
            await fetch('https://localhost:7078/api/notify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    'ApiKey': '@Model.ApiKey'
                },
                body: JSON.stringify(notifyPayload)
            });
        } else {
            showToast(`Gửi phản hồi thất bại: ${data.message || 'Lỗi không xác định'}`, 'error');
        }
    } catch (err) {
        console.error('Lỗi khi gửi phản hồi:', err);
        showToast('Đã xảy ra lỗi khi gửi phản hồi.', 'error');
    }
}

