@page "/ResultTest"
@model TNS_EDU_TEST.Areas.Test.Pages.ResultTestModel
@{
    ViewData["Title"] = "TOEIC Test Result";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* ============================================
           BASE STYLES & RESET
           ============================================ */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        body {
            font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #E8F4F8 0%, #FFF9E6 50%, #F0E6F6 100%);
            display: flex;
            position: relative;
            color: #2C3E50;
            line-height: 1.6;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('https://www.transparenttextures.com/patterns/stardust.png');
                opacity: 0.05;
                z-index: 0;
                pointer-events: none;
            }

        /* ============================================
           MAIN CONTAINER
           ============================================ */
        .main-container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        /* ============================================
           TEST INFO LEFT SIDEBAR
           ============================================ */
        .test-info-left {
            width: 300px;
            background: linear-gradient(180deg, #FFF9E6 0%, #E8F4F8 100%);
            padding: 32px 24px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            box-shadow: 4px 0 16px rgba(46, 92, 138, 0.12);
            z-index: 1;
            border-right: 3px solid #D4AF37;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: #E8C868 rgba(255, 249, 230, 0.5);
        }

            .test-info-left::-webkit-scrollbar {
                width: 6px;
            }

            .test-info-left::-webkit-scrollbar-track {
                background: rgba(255, 249, 230, 0.5);
                border-radius: 10px;
            }

            .test-info-left::-webkit-scrollbar-thumb {
                background: #E8C868;
                border-radius: 10px;
            }

                .test-info-left::-webkit-scrollbar-thumb:hover {
                    background: #D4AF37;
                }

            .test-info-left h2 {
                font-weight: 700;
                background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 32px;
                text-align: center;
                font-size: 1.25rem;
                letter-spacing: 0.3px;
                text-transform: uppercase;
                white-space: nowrap; /* Không cho xuống dòng */
            }

        .test-info-item {
            display: flex;
            justify-content: space-between; /* Giãn đều theo chiều ngang */
            align-items: center;
            margin-bottom: 12px; /* Giảm từ 20px xuống 12px - gần nhau hơn theo chiều dọc */
            padding: 10px 16px; /* Điều chỉnh padding */
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.08);
            border: 2px solid #E8DED2;
            transition: all 0.3s ease;
        }

            .test-info-item:hover {
                border-color: #E8C868;
                transform: translateX(4px);
                box-shadow: 0 4px 12px rgba(46, 92, 138, 0.12);
            }

        .test-info-label {
            font-weight: 700;
            color: #2E5C8A;
            text-align: left; /* Căn lề trái */
            font-size: 0.85rem; /* Giảm từ 0.95rem xuống 0.85rem */
            letter-spacing: 0.3px;
            white-space: nowrap; /* Không cho xuống dòng */
            flex-shrink: 0; /* Không co lại */
            margin-right: 12px; /* Khoảng cách với value */
        }

        .test-info-value {
            font-weight: 500;
            color: #2C3E50;
            text-align: right; /* Căn lề phải */
            font-size: 0.85rem; /* Giảm từ 0.95rem xuống 0.85rem */
            word-break: break-word; /* Cho phép ngắt từ nếu quá dài */
            flex: 1; /* Chiếm không gian còn lại */
        }

            .test-info-value.time-spent,
            .test-info-value.test-score {
                font-weight: 700;
                background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                font-size: 1rem; /* Giảm từ 1.1rem xuống 1rem */
            }

        .test-info-left h2 {
            font-weight: 700;
            background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 20px; /* Giảm từ 32px xuống 20px - gần với items hơn */
            text-align: center;
            font-size: 1.15rem; /* Giảm từ 1.25rem xuống 1.15rem */
            letter-spacing: 0.3px;
            text-transform: uppercase;
            white-space: nowrap;
        }

        .exit-btn {
            padding: 12px 24px;
            margin-top: 16px; /* Giảm từ 24px xuống 16px */
            border: none;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem; /* Giảm từ 0.95rem xuống 0.9rem */
            cursor: pointer;
            background: white;
            color: #E8956F;
            border: 2px solid #E8956F;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(232, 149, 111, 0.2);
            width: 100%; /* Full width cho button */
        }

            .exit-btn:hover {
                background: #E8956F;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(232, 149, 111, 0.3);
            }

        /* ============================================
           MAIN CONTENT AREA
           ============================================ */
        .main-content {
            flex: 1;
            margin: 0 200px 0 300px;
            padding: 32px;
            overflow-y: auto;
            min-height: 100vh;
            -webkit-overflow-scrolling: touch;
            position: relative;
        }

        .main-content-wrapper {
            min-height: 100%;
            padding-bottom: 32px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .main-content::-webkit-scrollbar {
            width: 8px;
        }

        .main-content::-webkit-scrollbar-track {
            background: rgba(255, 249, 230, 0.5);
            border-radius: 10px;
        }

        .main-content::-webkit-scrollbar-thumb {
            background: #E8C868;
            border-radius: 10px;
        }

            .main-content::-webkit-scrollbar-thumb:hover {
                background: #D4AF37;
            }

        /* ============================================
           QUESTION CONTAINERS
           ============================================ */
        .question-container {
            background: linear-gradient(to bottom, #FFFFFF, #F9FAFB);
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 4px 16px rgba(46, 92, 138, 0.12);
            max-width: 900px;
            width: 100%;
            margin: 0 auto 32px;
            text-align: center;
            animation: fadeInUp 0.5s ease-out;
            border: 2px solid #E8DED2;
            position: relative;
        }

            .question-container.correct {
                border: 3px solid #87A878;
                box-shadow: 0 0 20px rgba(135, 168, 120, 0.3);
                background: linear-gradient(to bottom, #FFFFFF, #F5FFF5);
            }

            .question-container.incorrect {
                border: 3px solid #E8956F;
                box-shadow: 0 0 20px rgba(232, 149, 111, 0.3);
                background: linear-gradient(to bottom, #FFFFFF, #FFF5F5);
            }

            .question-container h2 {
                font-weight: 700;
                background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 24px;
                font-size: 1.5rem;
                padding-bottom: 16px;
                border-bottom: 4px solid #E8C868;
            }

        .question-image {
            width: 100%;
            max-width: 450px;
            height: auto;
            object-fit: cover;
            border-radius: 12px;
            margin: 24px auto;
            display: block;
            box-shadow: 0 4px 16px rgba(46, 92, 138, 0.12);
            transition: transform 0.3s ease;
            border: 3px solid #E8DED2;
        }

            .question-image:hover {
                transform: scale(1.03);
                box-shadow: 0 8px 24px rgba(46, 92, 138, 0.16);
            }

        .question-audio {
            margin-bottom: 24px;
            width: 100%;
            max-width: 500px;
            border-radius: 10px;
            background: linear-gradient(135deg, #FFF4E0 0%, #E8F4F8 100%);
            padding: 12px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.1);
            border: 2px solid #E8DED2;
        }

            .question-audio:hover {
                transform: scale(1.02);
                box-shadow: 0 4px 12px rgba(46, 92, 138, 0.15);
            }

        .question-text {
            font-size: 1.125rem;
            line-height: 1.8;
            color: #2C3E50;
            font-weight: 400;
            margin-bottom: 32px;
            text-align: left;
            padding: 24px;
            background: linear-gradient(135deg, #FFF4E0 0%, #E8F4F8 100%);
            border-radius: 12px;
            border-left: 5px solid #D4AF37;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.08);
        }

        /* ============================================
           ANSWER OPTIONS
           ============================================ */
        .answer-options {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .answer-option {
            display: flex;
            align-items: center;
            gap: 16px;
            background: white;
            padding: 16px 24px;
            border-radius: 12px;
            transition: all 0.3s ease;
            border: 2px solid #E8DED2;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.08);
        }

            .answer-option.selected {
                background: linear-gradient(135deg, #E8C868 0%, #F4A259 100%);
                border-color: #D4AF37;
                color: white;
                font-weight: 600;
                box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
            }

                .answer-option.selected label,
                .answer-option.selected .label-text,
                .answer-option.selected .answer-content,
                .answer-option.selected .colon {
                    color: white;
                }

            .answer-option input[type="radio"] {
                margin: 0;
                width: 22px;
                height: 22px;
                cursor: not-allowed;
                accent-color: #2E5C8A;
            }

            .answer-option label {
                display: flex;
                align-items: center;
                font-size: 1rem;
                color: #2C3E50;
                margin: 0;
                gap: 8px;
                pointer-events: none;
                flex: 1;
            }

            .answer-option .label-text {
                font-weight: 700;
                color: white;
                min-width: 32px;
                height: 32px;
                display: flex;
                align-items: center;
                justify-content: center;
                text-align: center;
                font-size: 1.125rem;
                background: linear-gradient(135deg, #2E5C8A 0%, #4A7BA7 100%);
                border-radius: 50%;
                box-shadow: 0 2px 8px rgba(46, 92, 138, 0.2);
            }

            .answer-option.selected .label-text {
                background: white;
                color: #D4AF37;
            }

            .answer-option .answer-content {
                font-weight: 400;
                color: #2C3E50;
                font-size: 1rem;
                line-height: 1.6;
            }

            .answer-option .colon {
                font-weight: 600;
                color: #5A6C7D;
            }

        /* ============================================
           RESULT MESSAGE & EXPLANATION
           ============================================ */
        .result-message {
            font-weight: 700;
            font-size: 1.2rem;
            margin-top: 24px;
            padding: 12px 24px;
            border-radius: 10px;
            letter-spacing: 0.3px;
        }

            .result-message.correct {
                color: white;
                background: linear-gradient(135deg, #87A878 0%, #A8D8B9 100%);
                box-shadow: 0 4px 12px rgba(135, 168, 120, 0.3);
            }

            .result-message.incorrect {
                color: white;
                background: linear-gradient(135deg, #E8956F 0%, #D97AA6 100%);
                box-shadow: 0 4px 12px rgba(232, 149, 111, 0.3);
            }

        .solution-label {
            font-weight: 700;
            font-size: 1.2rem;
            color: #2E5C8A;
            margin-top: 24px;
            display: block;
            text-align: left;
            padding-left: 24px;
            letter-spacing: 0.5px;
        }

        .explanation {
            background: linear-gradient(135deg, #FFF4E0 0%, #E8F4F8 100%);
            padding: 20px 24px;
            border-radius: 12px;
            margin-top: 12px;
            font-size: 1rem;
            color: #2C3E50;
            line-height: 1.8;
            text-align: left;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.08);
            border-left: 5px solid #E8956F;
        }

        /* ============================================
           REPORT BUTTON
           ============================================ */
        .report-btn {
            display: inline-flex;
            align-items: center;
            padding: 12px 24px;
            margin-top: 24px;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            background: linear-gradient(135deg, #2E5C8A 0%, #4A7BA7 100%);
            color: white;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.2);
        }

            .report-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(46, 92, 138, 0.4);
                background: linear-gradient(135deg, #4A7BA7 0%, #2E5C8A 100%);
            }

            .report-btn i {
                margin-right: 8px;
                font-size: 1.1rem;
            }

        /* ============================================
           PART 3/4/6/7 LAYOUT
           ============================================ */
        .part3-container {
            display: flex;
            gap: 32px;
            background: linear-gradient(to bottom, #FFFFFF, #F9FAFB);
            border-radius: 16px;
            padding: 32px;
            box-shadow: 0 4px 16px rgba(46, 92, 138, 0.12);
            max-width: 1200px;
            width: 100%;
            margin: 0 auto 32px;
            border: 2px solid #E8DED2;
        }

        .part3-left {
            flex: 1;
            text-align: center;
            border-right: 3px solid #E8C868;
            padding-right: 32px;
            max-height: calc(100vh - 100px);
            overflow-y: auto;
            padding-left: 12px;
            scrollbar-width: thin;
            scrollbar-color: #E8C868 rgba(255, 249, 230, 0.5);
        }

            .part3-left::-webkit-scrollbar {
                width: 6px;
            }

            .part3-left::-webkit-scrollbar-track {
                background: rgba(255, 249, 230, 0.5);
                border-radius: 10px;
            }

            .part3-left::-webkit-scrollbar-thumb {
                background: #E8C868;
                border-radius: 10px;
            }

                .part3-left::-webkit-scrollbar-thumb:hover {
                    background: #D4AF37;
                }

            .part3-left h2 {
                font-weight: 700;
                background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 24px;
                font-size: 1.5rem;
            }

            .part3-left .question-text {
                text-align: left;
            }

        .part3-right {
            flex: 1.2;
            display: flex;
            flex-direction: column;
            gap: 24px;
            max-height: calc(100vh - 100px);
            overflow-y: auto;
            padding-left: 16px;
            scrollbar-width: thin;
            scrollbar-color: #E8C868 rgba(255, 249, 230, 0.5);
        }

            .part3-right::-webkit-scrollbar {
                width: 6px;
            }

            .part3-right::-webkit-scrollbar-track {
                background: rgba(255, 249, 230, 0.5);
                border-radius: 10px;
            }

            .part3-right::-webkit-scrollbar-thumb {
                background: #E8C868;
                border-radius: 10px;
            }

                .part3-right::-webkit-scrollbar-thumb:hover {
                    background: #D4AF37;
                }

        .sub-question {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.08);
            border: 2px solid #E8DED2;
            transition: all 0.3s ease;
            position: relative;
        }

            .sub-question:hover {
                border-color: #E8C868;
                box-shadow: 0 4px 12px rgba(46, 92, 138, 0.12);
            }

            .sub-question.correct {
                border: 3px solid #87A878;
                box-shadow: 0 0 20px rgba(135, 168, 120, 0.3);
                background: linear-gradient(to bottom, #FFFFFF, #F5FFF5);
            }

            .sub-question.incorrect {
                border: 3px solid #E8956F;
                box-shadow: 0 0 20px rgba(232, 149, 111, 0.3);
                background: linear-gradient(to bottom, #FFFFFF, #FFF5F5);
            }

            .sub-question h4 {
                font-weight: 700;
                background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 16px;
                font-size: 1.125rem;
            }

                .sub-question h4 .question-content {
                    font-weight: 400;
                    color: #2C3E50;
                    display: block;
                    margin-top: 8px;
                    background: none;
                    -webkit-text-fill-color: #2C3E50;
                }

        .sub-question-image {
            width: 100%;
            max-width: 220px;
            height: auto;
            object-fit: cover;
            border-radius: 10px;
            margin: 16px auto;
            display: block;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.08);
            border: 2px solid #E8DED2;
        }

            .sub-question-image:hover {
                transform: scale(1.05);
            }

        .sub-question-audio {
            width: 100%;
            border-radius: 10px;
            background: linear-gradient(135deg, #FFF4E0 0%, #E8F4F8 100%);
            padding: 8px;
            margin-bottom: 16px;
            border: 2px solid #E8DED2;
        }

            .sub-question-audio:hover {
                transform: scale(1.02);
                box-shadow: 0 4px 12px rgba(46, 92, 138, 0.12);
            }

        /* ============================================
           SIDEBAR RIGHT - QUESTION NAVIGATION
           ============================================ */
        .sidebar-right {
            width: 200px;
            background: linear-gradient(180deg, #FFF9E6 0%, #E8F4F8 100%);
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            position: fixed;
            right: 0;
            top: 0;
            box-shadow: -4px 0 16px rgba(46, 92, 138, 0.12);
            overflow-y: hidden;
            z-index: 1;
            border-left: 3px solid #D4AF37;
        }

            .sidebar-right h3 {
                background: linear-gradient(90deg, #2E5C8A 0%, #4A7BA7 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                font-size: 1.125rem;
                margin-bottom: 20px;
                text-transform: uppercase;
                letter-spacing: 1px;
                font-weight: 700;
            }

        .part-section {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 12px;
            margin-bottom: 16px;
            overflow-y: auto;
            scroll-behavior: smooth;
            scrollbar-width: thin;
            scrollbar-color: #E8C868 rgba(255, 249, 230, 0.5);
            max-height: calc(100vh - 200px); /* Thêm max-height để giới hạn chiều cao */
            padding-bottom: 20px; /* Giảm từ 80px xuống 20px */
        }

            .part-section::-webkit-scrollbar {
                width: 6px;
            }

            .part-section::-webkit-scrollbar-track {
                background: rgba(255, 249, 230, 0.5);
                border-radius: 10px;
            }

            .part-section::-webkit-scrollbar-thumb {
                background: #E8C868;
                border-radius: 10px;
            }

                .part-section::-webkit-scrollbar-thumb:hover {
                    background: #D4AF37;
                }

        .question-circle {
            width: 48px;
            height: 48px;
            background: white;
            color: #2E5C8A;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            font-weight: 700;
            font-size: 1rem;
            text-decoration: none;
            border: 3px solid #E8C868;
            transition: all 0.3s ease;
            position: relative;
            box-shadow: 0 2px 8px rgba(46, 92, 138, 0.1);
        }

            .question-circle:hover {
                background: linear-gradient(135deg, #E8C868 0%, #F4A259 100%);
                color: white;
                border-color: #D4AF37;
                transform: scale(1.2);
                box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
            }

            .question-circle.correct {
                background: linear-gradient(135deg, #87A878 0%, #A8D8B9 100%);
                color: white;
                border-color: #87A878;
            }

            .question-circle.incorrect {
                background: linear-gradient(135deg, #E8956F 0%, #D97AA6 100%);
                color: white;
                border-color: #E8956F;
            }

        .progress-text-container {
            position: absolute;
            bottom: 24px;
            right: 20;
            background: linear-gradient(135deg, #2E5C8A 0%, #4A7BA7 100%);
            padding: 16px 24px;
            border-radius: 30px;
            box-shadow: 0 4px 16px rgba(46, 92, 138, 0.3);
            border: 3px solid #D4AF37;
            z-index: 2;
        }

        .progress-text {
            font-size: 1.5rem;
            font-weight: 700;
            font-family: 'Poppins', sans-serif;
            color: white;
            text-align: center;
            font-variant-numeric: tabular-nums;
        }

        /* ============================================
           MODAL STYLES
           ============================================ */
        .modal-backdrop {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
