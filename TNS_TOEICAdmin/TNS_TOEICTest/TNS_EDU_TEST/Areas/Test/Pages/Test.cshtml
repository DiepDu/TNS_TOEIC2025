            margin: 0;
        }

        .answer-option label {
            flex: 1;
            font-size: 1rem;
            color: #333;
            margin: 0;
        }

    .part3-container {
        display: flex;
        gap: 20px;
        background: #FFFFFF;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        max-width: 1000px;
        margin: 0 auto 20px;
        animation: zoomIn 1s ease-in-out;
    }

    .part3-left, .part3-right {
        flex: 1;
    }

    .part3-left {
        text-align: center;
    }

    .part3-right {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .sub-question {
        background: #FFECB3;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        animation: fadeInUp 1s ease-in-out;
    }

        .sub-question h4 {
            font-size: 1.1rem;
            margin-bottom: 10px;
            color: #333;
        }

    .sub-question-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 10px;
        margin: 0 auto 10px;
        display: block;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .sub-question-image:hover {
            transform: scale(1.05);
        }

    .sub-question-audio {
        width: 100%;
        border-radius: 5px;
        background: #B3E5FC;
        padding: 5px;
        margin-bottom: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .sub-question-audio:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    @@keyframes zoomIn {
        from {
            transform: scale(0.5);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes slideInDown {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

