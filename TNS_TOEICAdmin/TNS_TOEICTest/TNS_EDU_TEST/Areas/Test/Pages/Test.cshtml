    }

    .answer-option {
        display: flex;
        align-items: center;
        gap: 10px;
        background: #B3E5FC;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

        .answer-option:hover {
            background: #81D4FA;
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

